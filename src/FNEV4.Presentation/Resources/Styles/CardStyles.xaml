<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Style pour les cartes principales -->
    <Style x:Key="MainCardStyle" TargetType="materialDesign:Card">
        <Setter Property="Margin" Value="16" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2" />
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}" />
    </Style>

    <!-- Style pour les cartes de statistiques -->
    <Style x:Key="StatsCardStyle" TargetType="materialDesign:Card" BasedOn="{StaticResource MainCardStyle}">
        <Setter Property="Margin" Value="8" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="MinHeight" Value="120" />
    </Style>

    <!-- Style pour les cartes d'action -->
    <Style x:Key="ActionCardStyle" TargetType="materialDesign:Card" BasedOn="{StaticResource MainCardStyle}">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1" />
    </Style>

</ResourceDictionary>
