<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <!-- Style pour les boutons de section du menu principal -->
    <Style x:Key="MenuSectionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Height" Value="48" />
        <Setter Property="Padding" Value="8,0" />
        <Setter Property="Margin" Value="0,2" />
        <Setter Property="Width" Value="264" />
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsMenuExpanded, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                <Setter Property="Width" Value="48" />
                <Setter Property="Padding" Value="4,0" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
            </DataTrigger>
            <!-- Effet hover -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}" />
                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Style pour les boutons de sous-menu -->
    <Style x:Key="MenuSubItemButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Margin" Value="0,1" />
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Background" Value="Transparent" />
        <Style.Triggers>
            <!-- Effet hover pour sous-menus -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}" />
                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Template pour les icÃ´nes de menu avec tooltip -->
    <Style x:Key="MenuIconButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
        <Setter Property="Width" Value="48" />
        <Setter Property="Height" Value="48" />
        <Setter Property="Margin" Value="4,2" />
    </Style>

</ResourceDictionary>
