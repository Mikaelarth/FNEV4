<UserControl x:Class="FNEV4.Presentation.Views.CertificationFne.CertificationDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:FNEV4.Presentation.Converters"
             mc:Ignorable="d"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        
        <!-- Style pour les cartes principales -->
        <Style x:Key="DashboardCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="8" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2" />
        </Style>

        <!-- Style pour les cartes de statistiques -->
        <Style x:Key="StatCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <!-- Style pour les indicateurs de performance -->
        <Style x:Key="PerformanceIndicatorStyle" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSystemHealthy}" Value="True">
                    <Setter Property="Foreground" Value="Green" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSystemHealthy}" Value="False">
                    <Setter Property="Foreground" Value="Red" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- En-tête avec statut système -->
            <materialDesign:Card Grid.Row="0" Style="{StaticResource DashboardCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="Dashboard Certification FNE" 
                                   Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                                   Margin="0,0,0,8" />
                        <TextBlock Text="{Binding CurrentStatusMessage}" 
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}" />
                        <TextBlock Text="{Binding LastSystemCheck, StringFormat='Dernière vérification: {0:HH:mm:ss}'}" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,4,0,0" />
                    </StackPanel>

                    <!-- Indicateur de santé du système -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                        <materialDesign:PackIcon Kind="{Binding SystemHealthIcon}" 
                                                 Foreground="{Binding SystemHealthColor}"
                                                 Width="24" Height="24" 
                                                 VerticalAlignment="Center" />
                        <TextBlock Text="Système" 
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Foreground="{Binding SystemHealthColor}"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Boutons d'action rapide -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Command="{Binding RefreshDashboardCommand}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                ToolTip="Actualiser le dashboard">
                            <materialDesign:PackIcon Kind="Refresh" />
                        </Button>
                        
                        <Button Command="{Binding TestApiConnectionCommand}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                ToolTip="Tester la connexion API">
                            <materialDesign:PackIcon Kind="Connection" />
                        </Button>

                        <Button Command="{Binding ExportReportCommand}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                ToolTip="Exporter un rapport">
                            <materialDesign:PackIcon Kind="FileExport" />
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Statistiques principales -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Total factures aujourd'hui -->
                <materialDesign:Card Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <materialDesign:PackIcon Grid.Row="0" Kind="Receipt" 
                                                 Width="32" Height="32" 
                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                 HorizontalAlignment="Left" />
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding TotalInvoicesToday}" 
                                   Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                   Margin="0,8,0,0" />
                        <TextBlock Grid.Row="2" 
                                   Text="Factures aujourd'hui" 
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}" />
                    </Grid>
                </materialDesign:Card>

                <!-- Factures certifiées -->
                <materialDesign:Card Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <materialDesign:PackIcon Grid.Row="0" Kind="CheckCircle" 
                                                 Width="32" Height="32" 
                                                 Foreground="Green"
                                                 HorizontalAlignment="Left" />
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding TotalCertifiedToday}" 
                                   Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                   Foreground="Green"
                                   Margin="0,8,0,0" />
                        <TextBlock Grid.Row="2" 
                                   Text="Certifiées" 
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}" />
                    </Grid>
                </materialDesign:Card>

                <!-- Factures en attente -->
                <materialDesign:Card Grid.Column="2" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <materialDesign:PackIcon Grid.Row="0" Kind="ClockOutline" 
                                                 Width="32" Height="32" 
                                                 Foreground="Orange"
                                                 HorizontalAlignment="Left" />
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding TotalPendingInvoices}" 
                                   Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                   Foreground="Orange"
                                   Margin="0,8,0,0" />
                        <TextBlock Grid.Row="2" 
                                   Text="En attente" 
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}" />
                    </Grid>
                </materialDesign:Card>

                <!-- Erreurs -->
                <materialDesign:Card Grid.Column="3" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <materialDesign:PackIcon Grid.Row="0" Kind="AlertCircle" 
                                                 Width="32" Height="32" 
                                                 Foreground="Red"
                                                 HorizontalAlignment="Left" />
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding TotalErrorInvoices}" 
                                   Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                   Foreground="Red"
                                   Margin="0,8,0,0" />
                        <TextBlock Grid.Row="2" 
                                   Text="Erreurs" 
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}" />
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Graphiques et métriques -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- Graphique de progression -->
                <materialDesign:Card Grid.Column="0" Style="{StaticResource DashboardCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Progression de certification" 
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Margin="0,0,0,16" />

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Barre de progression certification -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="Certification" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding CertificationProgressPercentage, StringFormat='{}{0:F1}%'}" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           VerticalAlignment="Center" />
                            </Grid>
                            <ProgressBar Grid.Row="1" 
                                         Value="{Binding CertificationProgressPercentage}" 
                                         Maximum="100"
                                         Height="8"
                                         Margin="0,0,0,16" />

                            <!-- Barre de progression montant -->
                            <Grid Grid.Row="2" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="Montant certifié" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding CertifiedAmountToday, StringFormat='{}{0:N2} TND'}" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           VerticalAlignment="Center" />
                            </Grid>
                            <ProgressBar Grid.Row="3" 
                                         Value="{Binding AmountCertificationPercentage}" 
                                         Maximum="100"
                                         Height="8"
                                         Foreground="{DynamicResource SecondaryHueMidBrush}" />
                        </Grid>
                    </Grid>
                </materialDesign:Card>

                <!-- Métriques de performance -->
                <materialDesign:Card Grid.Column="1" Style="{StaticResource DashboardCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Performance" 
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Margin="0,0,0,16" />

                        <StackPanel Grid.Row="1" Orientation="Vertical">
                            <!-- Taux de succès -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="Taux de succès" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding CertificationSuccessRate, StringFormat='{}{0:F1}%'}" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="Green"
                                           VerticalAlignment="Center" />
                            </Grid>

                            <!-- Temps moyen -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="Temps moyen" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding AverageCertificationTime, StringFormat='{}{0:mm\\:ss}'}" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           VerticalAlignment="Center" />
                            </Grid>

                            <!-- Certifications dernière heure -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="Dernière heure" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding CertificationsLastHour}" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                                           VerticalAlignment="Center" />
                            </Grid>

                            <!-- API Status -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" 
                                           Text="API DGI" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding ApiConnectionStatus}" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Foreground="{Binding SystemHealthColor}"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Actions rapides -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Command="{Binding StartManualCertificationCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="8"
                        Height="60">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="PlayCircle" Width="24" Height="24" />
                        <TextBlock Text="Certification Manuelle" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   TextAlignment="Center"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Button>

                <Button Grid.Column="1"
                        Command="{Binding ConfigureAutoModeCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="8"
                        Height="60">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="AutoFix" Width="24" Height="24" />
                        <TextBlock Text="Mode Automatique" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   TextAlignment="Center"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Button>

                <Button Grid.Column="2"
                        Command="{Binding ViewAllActivitiesCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="8"
                        Height="60">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="History" Width="24" Height="24" />
                        <TextBlock Text="Journal d'Activités" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   TextAlignment="Center"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Button>

                <Button Grid.Column="3"
                        Command="{Binding ViewSystemLogsCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="8"
                        Height="60">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="TextBoxMultiple" Width="24" Height="24" />
                        <TextBlock Text="Logs Système" 
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   TextAlignment="Center"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Activités récentes et certifications -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Activités récentes -->
                <materialDesign:Card Grid.Column="0" Style="{StaticResource DashboardCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Activités récentes" 
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       VerticalAlignment="Center" />

                            <Button Grid.Column="1"
                                    Command="{Binding ViewAllActivitiesCommand}"
                                    Content="Voir tout"
                                    Style="{StaticResource MaterialDesignFlatButton}" />
                        </Grid>

                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding RecentActivities}"
                                 MaxHeight="200"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Margin="0,16,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding LevelIcon}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0" />

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding FormattedTime}"
                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0" />

                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Message}"
                                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </materialDesign:Card>

                <!-- Certifications récentes -->
                <materialDesign:Card Grid.Column="1" Style="{StaticResource DashboardCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Dernières certifications" 
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       VerticalAlignment="Center" />

                            <Button Grid.Column="1"
                                    Command="{Binding ViewAllCertificationsCommand}"
                                    Content="Voir tout"
                                    Style="{StaticResource MaterialDesignFlatButton}" />
                        </Grid>

                        <ListBox Grid.Row="1" 
                                 ItemsSource="{Binding RecentCertifications}"
                                 MaxHeight="200"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Margin="0,16,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding InvoiceNumber}"
                                                       Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                       VerticalAlignment="Center" />

                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding FormattedTime}"
                                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                       VerticalAlignment="Center" />
                                        </Grid>

                                        <Grid Grid.Row="1" Margin="0,2,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding ClientName}"
                                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                       TextTrimming="CharacterEllipsis" />

                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding FormattedAmount}"
                                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}" />
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>