<UserControl x:Class="FNEV4.Presentation.Views.GestionFactures.FacturesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:FNEV4.Presentation.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        
        <!-- Style pour les cartes de statistiques -->
        <Style x:Key="StatsCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1"/>
            <Setter Property="materialDesign:ColorZoneAssist.Mode" Value="PrimaryLight"/>
        </Style>
        
        <!-- Style pour l'en-tÃªte -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline5TextBlock}">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- Style pour les boutons d'action -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <materialDesign:PackIcon Grid.Column="0" 
                                   Kind="Receipt" 
                                   Width="40" Height="40"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            
            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Gestion des Factures" 
                         Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Text="Visualisation, recherche et gestion complÃ¨te des factures" 
                         Style="{StaticResource MaterialDesignBody1TextBlock}"
                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding RefreshDataCommand}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Actualiser"/>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{DynamicResource PrimaryHueMidBrush}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Nouvelle Facture"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Statistiques -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Total Factures -->
            <materialDesign:Card Grid.Column="0" Style="{StaticResource StatsCardStyle}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total Factures" 
                                     Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding TotalFactures}" 
                                     Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                     FontWeight="Bold"/>
                        </StackPanel>
                        
                        <materialDesign:PackIcon Grid.Column="1" 
                                               Kind="Receipt" 
                                               Width="32" Height="32"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                                               VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
            
            <!-- Factures CertifiÃ©es -->
            <materialDesign:Card Grid.Column="1" Style="{StaticResource StatsCardStyle}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="CertifiÃ©es" 
                                     Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding FacturesCertifiees}" 
                                     Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                     FontWeight="Bold"
                                     Foreground="Green"/>
                        </StackPanel>
                        
                        <materialDesign:PackIcon Grid.Column="1" 
                                               Kind="CheckCircle" 
                                               Width="32" Height="32"
                                               Foreground="Green"
                                               VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
            
            <!-- Factures En Attente -->
            <materialDesign:Card Grid.Column="2" Style="{StaticResource StatsCardStyle}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="En attente" 
                                     Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding FacturesEnAttente}" 
                                     Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                     FontWeight="Bold"
                                     Foreground="Orange"/>
                        </StackPanel>
                        
                        <materialDesign:PackIcon Grid.Column="1" 
                                               Kind="Clock" 
                                               Width="32" Height="32"
                                               Foreground="Orange"
                                               VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
            
            <!-- CA du Mois -->
            <materialDesign:Card Grid.Column="3" Style="{StaticResource StatsCardStyle}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="CA du mois" 
                                     Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding ChiffreAffaireMois, StringFormat=C}" 
                                     Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                     FontWeight="Bold"
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        </StackPanel>
                        
                        <materialDesign:PackIcon Grid.Column="1" 
                                               Kind="CurrencyEur" 
                                               Width="32" Height="32"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                                               VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Zone de filtres -->
        <materialDesign:Card Grid.Row="2" Padding="12" Margin="0,0,0,8" 
                           materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <!-- ContrÃ´les de filtre -->
            <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Recherche textuelle -->
                    <TextBox Grid.Column="0"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"
                           materialDesign:HintAssist.Hint="Rechercher par numÃ©ro, client ou NCC"
                           Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                           Margin="0,0,8,0">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding ApplyFiltersCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    
                    <!-- Filtre par statut -->
                    <ComboBox Grid.Column="1"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            materialDesign:HintAssist.Hint="Statut"
                            ItemsSource="{Binding StatutFilterOptions}"
                            SelectedItem="{Binding SelectedStatutFilter}"
                            Margin="0,0,8,0"/>
                    
                    <!-- Date de dÃ©but -->
                    <DatePicker Grid.Column="2"
                              Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                              materialDesign:HintAssist.Hint="Date dÃ©but"
                              SelectedDate="{Binding DateDebutFilter}"
                              Margin="0,0,8,0"/>
                    
                    <!-- Date de fin -->
                    <DatePicker Grid.Column="3"
                              Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                              materialDesign:HintAssist.Hint="Date fin"
                              SelectedDate="{Binding DateFinFilter}"
                              Margin="0,0,8,0"/>
                    
                    <!-- Bouton d'effacement des filtres -->
                    <Button Grid.Column="4"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Command="{Binding ClearFiltersCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FilterOff" Width="16" Height="16" Margin="0,0,4,0"/>
                            <TextBlock Text="Effacer"/>
                        </StackPanel>
                    </Button>
                </Grid>
        </materialDesign:Card>

        <!-- DataGrid des factures -->
        <materialDesign:Card Grid.Row="3" Padding="0" materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <Grid>
                <!-- DataGrid -->
                <DataGrid ItemsSource="{Binding FacturesView}"
                        SelectedItem="{Binding SelectedFacture}"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        IsReadOnly="True"
                        GridLinesVisibility="Horizontal"
                        HeadersVisibility="Column"
                        materialDesign:DataGridAssist.CellPadding="8"
                        materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                        VirtualizingPanel.VirtualizationMode="Recycling"
                        VirtualizingPanel.CacheLength="50,50"
                        ScrollViewer.CanContentScroll="True"
                        Visibility="{Binding HasFactures, Converter={StaticResource BoolToVisConverter}}">
                    
                    <DataGrid.Columns>
                        <!-- NumÃ©ro de facture -->
                        <DataGridTextColumn Header="ðŸ“„ NumÃ©ro" 
                                          Binding="{Binding InvoiceNumber}" 
                                          Width="120"
                                          FontWeight="Medium"/>
                        
                        <!-- Date -->
                        <DataGridTextColumn Header="ðŸ“… Date" 
                                          Binding="{Binding InvoiceDate, StringFormat=dd/MM/yyyy}" 
                                          Width="100"/>
                        
                        <!-- Client -->
                        <DataGridTextColumn Header="ðŸ‘¤ Client" 
                                          Binding="{Binding Client.Name}" 
                                          Width="200"/>
                        
                        <!-- NCC -->
                        <DataGridTextColumn Header="ðŸ”¢ NCC" 
                                          Binding="{Binding Client.ClientNcc}" 
                                          Width="120"/>
                        
                        <!-- Point de vente -->
                        <DataGridTextColumn Header="ðŸª Point de vente" 
                                          Binding="{Binding PointOfSale}" 
                                          Width="120"/>
                        
                        <!-- Montant HT -->
                        <DataGridTextColumn Header="ðŸ’° HT" 
                                          Binding="{Binding TotalAmountHT, StringFormat=C}" 
                                          Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- Montant TTC -->
                        <DataGridTextColumn Header="ðŸ’° TTC" 
                                          Binding="{Binding TotalAmountTTC, StringFormat=C}" 
                                          Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- Statut -->
                        <DataGridTemplateColumn Header="ðŸ”„ Statut" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="LightGray"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Certified">
                                                        <Setter Property="Background" Value="LightGreen"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Error">
                                                        <Setter Property="Background" Value="LightCoral"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="En cours certification">
                                                        <Setter Property="Background" Value="LightBlue"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Status}" 
                                                 FontSize="11" 
                                                 FontWeight="Medium"
                                                 Foreground="Black"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Actions -->
                        <DataGridTemplateColumn Header="âš™ï¸ Actions" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Voir dÃ©tails -->
                                        <Button Style="{StaticResource ActionButtonStyle}"
                                              Command="{Binding DataContext.ViewFactureDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"
                                              ToolTip="Voir les dÃ©tails">
                                            <materialDesign:PackIcon Kind="Eye" Width="16" Height="16"/>
                                        </Button>
                                        
                                        <!-- Modifier -->
                                        <Button Style="{StaticResource ActionButtonStyle}"
                                              Command="{Binding DataContext.EditFactureCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"
                                              ToolTip="Modifier">
                                            <materialDesign:PackIcon Kind="Edit" Width="16" Height="16"/>
                                        </Button>
                                        
                                        <!-- Certifier -->
                                        <Button Style="{StaticResource ActionButtonStyle}"
                                              Command="{Binding DataContext.CertifyFactureCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"
                                              ToolTip="Certifier FNE"
                                              Foreground="Green">
                                            <materialDesign:PackIcon Kind="Certificate" Width="16" Height="16"/>
                                        </Button>
                                        
                                        <!-- Supprimer -->
                                        <Button Style="{StaticResource ActionButtonStyle}"
                                              Command="{Binding DataContext.DeleteFactureCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"
                                              ToolTip="Supprimer"
                                              Foreground="Red">
                                            <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Message quand aucune facture -->
                <StackPanel HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Visibility="{Binding HasFactures, Converter={StaticResource InverseBoolToVisConverter}}">
                    <materialDesign:PackIcon Kind="ReceiptOutline" 
                                           Width="64" Height="64"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                           HorizontalAlignment="Center"/>
                    <TextBlock Text="Aucune facture trouvÃ©e" 
                             Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                             HorizontalAlignment="Center"
                             Margin="0,16,0,8"/>
                    <TextBlock Text="Importez des factures ou ajustez vos filtres de recherche" 
                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Indicateur de chargement -->
                <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"
                    Background="#80FFFFFF">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                   Width="48" Height="48"
                                   IsIndeterminate="True"/>
                        <TextBlock Text="Chargement des factures..." 
                                 Style="{StaticResource MaterialDesignBody1TextBlock}"
                                 Margin="0,16,0,0"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- Barre de statut -->
        <Grid Grid.Row="4" Margin="0,8,0,0">
            <TextBlock Text="{Binding StatusMessage}" 
                     Style="{StaticResource MaterialDesignCaptionTextBlock}"
                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                     VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>