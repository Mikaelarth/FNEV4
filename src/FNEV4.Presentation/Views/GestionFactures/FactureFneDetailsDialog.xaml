<Window x:Class="FNEV4.Presentation.Views.GestionFactures.FactureFneDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:FNEV4.Presentation.Converters"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Détails de la Facture FNE"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Topmost="False"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Converter pour les couleurs TVA -->
        <converters:TvaCodeToBrushConverter x:Key="TvaCodeToBrushConverter"/>
        
        <!-- Style pour les en-têtes de section -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="Margin" Value="0,12,0,8"/>
        </Style>

        <!-- Style pour les valeurs -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="8,2"/>
        </Style>

        <!-- Style pour les badges de statut -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête avec icône et titre -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <materialDesign:PackIcon Grid.Column="0"
                                     Kind="FileDocumentOutline"
                                     Width="32"
                                     Height="32"
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,12,0"/>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding FactureTitle}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource MaterialDesignBody}"/>
                <TextBlock Text="{Binding FactureSubtitle}"
                           FontSize="14"
                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </StackPanel>

            <!-- Badge de statut -->
            <Border Grid.Column="2"
                    Style="{StaticResource StatusBadgeStyle}"
                    Background="{Binding StatusBackground}">
                <TextBlock Text="{Binding StatusText}"
                           FontWeight="SemiBold"
                           Foreground="White"/>
            </Border>
        </Grid>

        <!-- Informations de la facture -->
        <materialDesign:Card Grid.Row="1" 
                             Margin="0,0,0,16"
                             Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Colonne 1: Informations client -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    <TextBlock Text="👤 INFORMATIONS CLIENT" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Code:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Facture.ClientCode}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Nom:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Facture.ClientDisplayName}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Template:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <Border Grid.Row="2" Grid.Column="1" 
                                Background="{Binding TemplateBackground}"
                                CornerRadius="8"
                                Padding="6,2"
                                HorizontalAlignment="Left"
                                Margin="8,2">
                            <TextBlock Text="{Binding TemplateDisplayName}" 
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Border>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Point de Vente:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Facture.PointOfSale}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Paiement:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding PaymentMethodDisplayName}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>

                <!-- Colonne 2: Informations facture -->
                <StackPanel Grid.Column="1" Margin="0,0,16,0">
                    <TextBlock Text="📄 INFORMATIONS FACTURE" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="N° Facture:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Facture.InvoiceNumber}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Date:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Facture.InvoiceDate, StringFormat=dd/MM/yyyy}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Type:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Facture.InvoiceType}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Nb Articles:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding NombreArticles}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Référence FNE:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ReferenceFormatee}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Certifiée le:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding DateCertificationFormatee}" Style="{StaticResource ValueStyle}"/>
                    </Grid>
                </StackPanel>

                <!-- Colonne 3: Montants -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="💰 MONTANTS" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Montant HT:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Facture.TotalAmountHT, StringFormat='{}{0:N2} FCFA'}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Montant TVA:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Facture.TotalVatAmount, StringFormat='{}{0:N2} FCFA'}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Montant TTC:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Facture.TotalAmountTTC, StringFormat='{}{0:N2} FCFA'}" 
                                   FontWeight="Bold"
                                   FontSize="15"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                   Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Remise:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Facture.GlobalDiscount, StringFormat='{}{0:N2}%'}" Style="{StaticResource ValueStyle}"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Message:" FontWeight="SemiBold" Style="{StaticResource ValueStyle}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding MessageCommercialCourt}" 
                                   Style="{StaticResource ValueStyle}"
                                   TextWrapping="Wrap"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- DataGrid des articles -->
        <materialDesign:Card Grid.Row="2" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- En-tête des articles -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Padding="16,12">
                    <TextBlock Text="🛍️ DÉTAIL DES ARTICLES"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </Border>

                <!-- DataGrid avec bindings corrigés -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Articles}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          AlternatingRowBackground="#F8F9FA"
                          materialDesign:DataGridAssist.CellPadding="8,4"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8,8">

                    <DataGrid.Columns>
                        <!-- Code Article -->
                        <DataGridTextColumn Header="Code Article"
                                            Binding="{Binding ProductCode}"
                                            Width="120"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Désignation avec le bon nom de propriété -->
                        <DataGridTextColumn Header="Désignation"
                                            Binding="{Binding Description}"
                                            Width="*"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Quantité -->
                        <DataGridTextColumn Header="Qté"
                                            Binding="{Binding Quantity, StringFormat=N2}"
                                            Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Unité avec le bon nom de propriété -->
                        <DataGridTextColumn Header="Unité"
                                            Binding="{Binding MeasurementUnit}"
                                            Width="80"
                                            ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>

                        <!-- Prix Unitaire avec le bon nom de propriété -->
                        <DataGridTextColumn Header="Prix Unit. (FCFA)"
                                            Binding="{Binding UnitPrice, StringFormat='{}{0:N2}'}"
                                            Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Type TVA avec le bon nom de propriété -->
                        <DataGridTemplateColumn Header="Type TVA" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                        <!-- Code TVA avec couleur -->
                                        <Border Background="{Binding VatCode, Converter={StaticResource TvaCodeToBrushConverter}}"
                                                CornerRadius="8"
                                                Padding="6,2"
                                                HorizontalAlignment="Center"
                                                Margin="0,2">
                                            <TextBlock Text="{Binding VatCode}"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                        <!-- Description TVA -->
                                        <TextBlock FontSize="10" 
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="0,2">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding VatCode}" Value="TVA">
                                                            <Setter Property="Text" Value="TVA normal 18%"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding VatCode}" Value="TVAB">
                                                            <Setter Property="Text" Value="TVA réduit 9%"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding VatCode}" Value="TVAC">
                                                            <Setter Property="Text" Value="TVA exec conv 0%"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding VatCode}" Value="TVAD">
                                                            <Setter Property="Text" Value="TVA exec leg 0%"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding VatCode}" Value="">
                                                            <Setter Property="Text" Value="Code TVA manquant"/>
                                                            <Setter Property="Foreground" Value="Red"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding VatCode}" Value="{x:Null}">
                                                            <Setter Property="Text" Value="Code TVA manquant"/>
                                                            <Setter Property="Foreground" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Text" Value="Type inconnu"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Montant HT avec le bon nom de propriété -->
                        <DataGridTextColumn Header="Montant HT (FCFA)"
                                            Binding="{Binding LineAmountHT, StringFormat='{}{0:N2}'}"
                                            Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,16,0,0">
            
            <Button Content="📋 CERTIFIER"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="{DynamicResource SecondaryHueMidBrush}"
                    BorderBrush="{DynamicResource SecondaryHueMidBrush}"
                    Foreground="White"
                    Padding="16,8"
                    Click="CertifierButton_Click"
                    Margin="0,0,8,0">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.3"/>
                </Button.Effect>
            </Button>
            
            <Button Content="🖨️ IMPRIMER"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="{DynamicResource PrimaryHueMidBrush}"
                    BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                    Foreground="White"
                    Padding="16,8"
                    Click="ImprimerButton_Click"
                    Margin="0,0,8,0">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.3"/>
                </Button.Effect>
            </Button>
            
            <Button Content="❌ FERMER"
                    IsCancel="True"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Padding="16,8"
                    Click="FermerButton_Click"
                    Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>