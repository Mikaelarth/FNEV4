<UserControl x:Class="FNEV4.Presentation.Views.Maintenance.LogsDiagnosticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête de la page -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <materialDesign:PackIcon Grid.Column="0" 
                                   Kind="FileDocumentOutline" 
                                   Width="32" Height="32"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            
            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Logs &amp; Diagnostics" 
                         FontSize="24" 
                         FontWeight="Bold"
                         Foreground="{DynamicResource MaterialDesignBody}"/>
                <TextBlock Text="Consultation des logs système et outils de diagnostic" 
                         FontSize="14" 
                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                         Margin="0,4,0,0"/>
            </StackPanel>
            
            <Button Grid.Column="2" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    VerticalAlignment="Center"
                    Command="{Binding RefreshLogsCommand}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Actualiser"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Barre d'outils -->
        <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Filtres de niveau de log -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Niveau :" VerticalAlignment="Center" Margin="0,0,8,0" 
                             Foreground="{DynamicResource MaterialDesignBody}"/>
                    <CheckBox Content="Debug" IsChecked="{Binding IsDebugEnabled}" 
                            Command="{Binding FilterLogsCommand}" Margin="0,0,16,0"/>
                    <CheckBox Content="Info" IsChecked="{Binding IsInfoEnabled}" 
                            Command="{Binding FilterLogsCommand}" Margin="0,0,16,0"/>
                    <CheckBox Content="Warning" IsChecked="{Binding IsWarningEnabled}" 
                            Command="{Binding FilterLogsCommand}" Margin="0,0,16,0"/>
                    <CheckBox Content="Error" IsChecked="{Binding IsErrorEnabled}" 
                            Command="{Binding FilterLogsCommand}" Margin="0,0,16,0"/>
                </StackPanel>
                
                <!-- Boutons d'action -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="8,0"
                            ToolTip="Générer des logs de test"
                            Command="{Binding GenerateTestLogsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TestTube" Width="16" Height="16" Margin="0,0,4,0"/>
                            <TextBlock Text="Test"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="8,0"
                            ToolTip="Exporter les logs"
                            Command="{Binding ExportLogsCommand}">
                        <materialDesign:PackIcon Kind="Export" Width="16" Height="16"/>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="8,0"
                            ToolTip="Effacer les logs"
                            Command="{Binding ClearLogsCommand}">
                        <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                    </Button>
                </StackPanel>
                
                <Button Grid.Column="2" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="8,0"
                        ToolTip="Lancer un diagnostic"
                        Command="{Binding RunDiagnosticsCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Magnify" Width="16" Height="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Diagnostic"/>
                    </StackPanel>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Zone principale : Logs en temps réel -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Liste des logs -->
            <materialDesign:Card Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" 
                            Background="{DynamicResource MaterialDesignToolBarBackground}"
                            Padding="16,12">
                        <TextBlock Text="Logs système" 
                                 FontWeight="Medium"
                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                    </Border>
                    
                    <ScrollViewer Grid.Row="1" 
                                VerticalScrollBarVisibility="Auto"
                                Background="{DynamicResource MaterialDesignPaper}">
                        <ItemsControl Margin="8" ItemsSource="{Binding Logs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8,4" Margin="0,2" 
                                          Background="{Binding BackgroundColor}" 
                                          CornerRadius="4"
                                          Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding TimestampFormatted}" 
                                                     FontFamily="Consolas" 
                                                     Foreground="#FF6F00" FontWeight="Bold" Margin="0,0,8,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding LevelText}" 
                                                     FontFamily="Consolas" 
                                                     Foreground="{Binding LevelColor}" FontWeight="Bold" Margin="0,0,8,0"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Message}" 
                                                     FontFamily="Consolas" TextWrapping="Wrap"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
            
            <!-- Séparateur -->
            <GridSplitter Grid.Column="1" 
                        HorizontalAlignment="Stretch" 
                        Background="{DynamicResource MaterialDesignDivider}"/>
            
            <!-- Panneau d'outils de diagnostic -->
            <materialDesign:Card Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" 
                            Background="{DynamicResource MaterialDesignToolBarBackground}"
                            Padding="16,12">
                        <TextBlock Text="Outils de diagnostic" 
                                 FontWeight="Medium"
                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                    </Border>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="16">
                            
                            <!-- Informations système -->
                            <Expander Header="Informations système" IsExpanded="True" Margin="0,0,0,12">
                                <StackPanel Margin="0,8,0,0">
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Version :" FontWeight="Medium"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SystemVersion}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Uptime :" FontWeight="Medium"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SystemUptime}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Mémoire :" FontWeight="Medium"/>
                                        <TextBlock Grid.Column="1" Text="{Binding MemoryUsage}"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="CPU :" FontWeight="Medium"/>
                                        <TextBlock Grid.Column="1" Text="{Binding CpuUsage}"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Système :" FontWeight="Medium"/>
                                        <TextBlock Grid.Column="1" Text="{Binding OperatingSystem}" TextWrapping="Wrap"/>
                                    </Grid>
                                </StackPanel>
                            </Expander>
                            
                            <!-- Actions de logs spécifiques -->
                            <Expander Header="Actions de logs" Margin="0,0,0,12">
                                <StackPanel Margin="0,8,0,0">
                                    <Button Content="Exporter tous les logs" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Stretch" Margin="0,0,0,8"
                                          Command="{Binding ExportLogsCommand}"/>
                                    <Button Content="Archiver anciens logs" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Stretch" Margin="0,0,0,8"
                                          Command="{Binding ArchiveOldLogsCommand}"/>
                                    <Button Content="Analyser erreurs récurrentes" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Stretch"
                                          Margin="0,0,0,8"
                                          Command="{Binding AnalyzeRecurringErrorsCommand}"/>
                                </StackPanel>
                            </Expander>
                            
                            <!-- Diagnostic avancé -->
                            <Expander Header="Diagnostic avancé">
                                <StackPanel Margin="0,8,0,0">
                                    <Button Content="Analyser performances" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Stretch" Margin="0,0,0,8"
                                          Command="{Binding AnalyzePerformanceCommand}"/>
                                    <Button Content="Rapport détaillé système" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Stretch" Margin="0,0,0,8"
                                          Command="{Binding GenerateDetailedReportCommand}"/>
                                    <Button Content="Diagnostic complet" 
                                          Style="{StaticResource MaterialDesignRaisedButton}"
                                          HorizontalAlignment="Stretch"
                                          Command="{Binding RunDiagnosticsCommand}"/>
                                </StackPanel>
                            </Expander>
                            
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
