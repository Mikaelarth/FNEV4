<UserControl x:Class="FNEV4.Presentation.Views.Maintenance.LogsDiagnosticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête de la page -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <materialDesign:PackIcon Grid.Column="0" 
                                   Kind="FileDocumentOutline" 
                                   Width="32" Height="32"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            
            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Logs &amp; Diagnostics" 
                         FontSize="24" 
                         FontWeight="Bold"
                         Foreground="{DynamicResource MaterialDesignBody}"/>
                <TextBlock Text="Consultation des logs système et outils de diagnostic" 
                         FontSize="14" 
                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                         Margin="0,4,0,0"/>
            </StackPanel>
            
            <Button Grid.Column="2" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Actualiser"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Barre d'outils -->
        <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Filtres de niveau de log -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Niveau :" VerticalAlignment="Center" Margin="0,0,8,0" 
                             Foreground="{DynamicResource MaterialDesignBody}"/>
                    <CheckBox Content="Debug" IsChecked="True" Margin="0,0,16,0"/>
                    <CheckBox Content="Info" IsChecked="True" Margin="0,0,16,0"/>
                    <CheckBox Content="Warning" IsChecked="True" Margin="0,0,16,0"/>
                    <CheckBox Content="Error" IsChecked="True" Margin="0,0,16,0"/>
                </StackPanel>
                
                <!-- Boutons d'action -->
                <Button Grid.Column="1" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="8,0"
                        ToolTip="Exporter les logs">
                    <materialDesign:PackIcon Kind="Export" Width="16" Height="16"/>
                </Button>
                
                <Button Grid.Column="2" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="8,0"
                        ToolTip="Effacer les logs">
                    <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                </Button>
                
                <Button Grid.Column="3" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="8,0"
                        ToolTip="Lancer un diagnostic">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Magnify" Width="16" Height="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Diagnostic"/>
                    </StackPanel>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Zone principale : Logs en temps réel -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Liste des logs -->
            <materialDesign:Card Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" 
                            Background="{DynamicResource MaterialDesignToolBarBackground}"
                            Padding="16,12">
                        <TextBlock Text="Logs système" 
                                 FontWeight="Medium"
                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                    </Border>
                    
                    <ScrollViewer Grid.Row="1" 
                                VerticalScrollBarVisibility="Auto"
                                Background="{DynamicResource MaterialDesignPaper}">
                        <ItemsControl Margin="8">
                            <!-- Exemple de logs (à remplacer par binding réel) -->
                            <Border Padding="8,4" Margin="0,2" 
                                  Background="#FFF3E0" 
                                  CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="12:34:56" FontFamily="Consolas" 
                                             Foreground="#FF6F00" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" Text="[INFO]" FontFamily="Consolas" 
                                             Foreground="#2E7D32" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="2" Text="Application démarrée avec succès" 
                                             FontFamily="Consolas" TextWrapping="Wrap"/>
                                </Grid>
                            </Border>
                            
                            <Border Padding="8,4" Margin="0,2" 
                                  Background="#FFEBEE" 
                                  CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="12:35:12" FontFamily="Consolas" 
                                             Foreground="#FF6F00" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" Text="[WARN]" FontFamily="Consolas" 
                                             Foreground="#F57C00" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="2" Text="Connexion base de données lente (2.3s)" 
                                             FontFamily="Consolas" TextWrapping="Wrap"/>
                                </Grid>
                            </Border>
                            
                            <Border Padding="8,4" Margin="0,2" 
                                  Background="#F3E5F5" 
                                  CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="12:35:45" FontFamily="Consolas" 
                                             Foreground="#FF6F00" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="1" Text="[DEBUG]" FontFamily="Consolas" 
                                             Foreground="#7B1FA2" FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Grid.Column="2" Text="Traitement fichier : factures_2024.xlsx" 
                                             FontFamily="Consolas" TextWrapping="Wrap"/>
                                </Grid>
                            </Border>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
            
            <!-- Séparateur -->
            <GridSplitter Grid.Column="1" 
                        HorizontalAlignment="Stretch" 
                        Background="{DynamicResource MaterialDesignDivider}"/>
            
            <!-- Panneau d'outils de diagnostic -->
            <materialDesign:Card Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" 
                            Background="{DynamicResource MaterialDesignToolBarBackground}"
                            Padding="16,12">
                        <TextBlock Text="Outils de diagnostic" 
                                 FontWeight="Medium"
                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                    </Border>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="16">
                            
                            <!-- Informations système -->
                            <Expander Header="Informations système" IsExpanded="True" Margin="0,0,0,12">
                                <StackPanel Margin="0,8,0,0">
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Version :" FontWeight="Medium"/>
                                        <TextBlock Grid.Column="1" Text="FNEV4 v1.0.0"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Uptime :" FontWeight="Medium"/>
                                        <TextBlock Grid.Column="1" Text="2h 15m"/>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Mémoire :" FontWeight="Medium"/>
                                        <TextBlock Grid.Column="1" Text="145 MB"/>
                                    </Grid>
                                </StackPanel>
                            </Expander>
                            
                            <!-- Tests de connectivité -->
                            <Expander Header="Tests de connectivité" Margin="0,0,0,12">
                                <StackPanel Margin="0,8,0,0">
                                    <Button Content="Test Base de données" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                                    <Button Content="Test API FNE" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                                    <Button Content="Test Réseau" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Expander>
                            
                            <!-- Actions de maintenance -->
                            <Expander Header="Actions de maintenance">
                                <StackPanel Margin="0,8,0,0">
                                    <Button Content="Nettoyer cache" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                                    <Button Content="Compacter BDD" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                                    <Button Content="Vérifier intégrité" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Expander>
                            
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
