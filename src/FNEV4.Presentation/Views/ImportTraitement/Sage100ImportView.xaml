<UserControl x:Class="FNEV4.Presentation.Views.ImportTraitement.Sage100ImportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:FNEV4.Presentation.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        <converters:BoolToIconConverter x:Key="BoolToIconConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToStateConverter x:Key="BoolToStateConverter"/>
        
        <!-- Nouveaux convertisseurs pour améliorer la DataGrid -->
        <converters:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNoConverter"/>
        <converters:BoolToLightColorConverter x:Key="BoolToLightColorConverter"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline5TextBlock}">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style x:Key="StepCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <materialDesign:PackIcon Grid.Column="0" 
                                   Kind="AlertCircleOutline" 
                                   Width="40" Height="40"
                                   VerticalAlignment="Center"
                                   Foreground="#FF5722"/>
            
            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Import Exceptionnel Sage 100 v15" 
                         Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Text="Import spécialisé pour factures Sage 100 v15 avec structure 1 feuille = 1 facture" 
                         Style="{StaticResource MaterialDesignBody1TextBlock}"
                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </StackPanel>
            
            <Button Grid.Column="2" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding GoBackCommand}"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ArrowLeft" Width="16" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Retour"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Zone principale -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Étape 1: Sélection du fichier -->
                <materialDesign:Card Style="{StaticResource StepCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" 
                               Background="#E3F2FD" 
                               CornerRadius="20" 
                               Width="40" Height="40"
                               Margin="0,0,16,0">
                            <TextBlock Text="1" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"
                                     FontWeight="Bold" 
                                     FontSize="16"
                                     Foreground="#1976D2"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Sélection du fichier Excel Sage 100 v15" 
                                     Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                     FontWeight="Medium"/>
                            <TextBlock Text="{Binding SelectedFilePath, TargetNullValue='Aucun fichier sélectionné'}" 
                                     Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                     Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <Button Grid.Column="2" 
                               Content="Parcourir"
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Command="{Binding SelectFileCommand}"
                               Width="120"/>
                    </Grid>
                </materialDesign:Card>

                <!-- Étape 2: Validation et aperçu -->
                <materialDesign:Card Style="{StaticResource StepCardStyle}"
                                   Visibility="{Binding HasSelectedFile, Converter={StaticResource BoolToVisConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- En-tête étape 2 -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" 
                                   Background="#E8F5E8" 
                                   CornerRadius="20" 
                                   Width="40" Height="40"
                                   Margin="0,0,16,0">
                                <TextBlock Text="2" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"
                                         FontWeight="Bold" 
                                         FontSize="16"
                                         Foreground="#388E3C"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Validation et aperçu du fichier" 
                                         Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                         FontWeight="Medium"/>
                                <TextBlock Text="Vérification de la structure Sage 100 v15 et prévisualisation des factures" 
                                         Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </StackPanel>
                            
                            <Button Grid.Column="2" 
                                   Content="Valider"
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   Command="{Binding ValidateFileCommand}"
                                   IsEnabled="{Binding HasSelectedFile}"
                                   Width="120"/>
                        </Grid>
                        
                        <!-- Résultats validation -->
                        <Border Grid.Row="1" 
                               Background="{DynamicResource MaterialDesignDivider}"
                               CornerRadius="8"
                               Padding="16"
                               Margin="0,16,0,0"
                               Visibility="{Binding HasValidationResult, Converter={StaticResource BoolToVisConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Grid.Column="0"
                                                       Kind="{Binding ValidationIcon}"
                                                       Width="24" Height="24"
                                                       Foreground="{Binding ValidationColor}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,12,0"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding ValidationMessage}" 
                                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                                             FontWeight="Medium"/>
                                    <TextBlock Text="{Binding ValidationDetails}" 
                                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                                             Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- En-tête informatif pour la DataGrid -->
                        <Border Grid.Row="2" 
                               Background="#F8F9FA" 
                               CornerRadius="4" 
                               Padding="16,12"
                               Margin="0,16,0,8"
                               Visibility="{Binding HasPreviewData, Converter={StaticResource BoolToVisConverter}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Grid.Column="0" 
                                                       Kind="InformationOutline"
                                                       VerticalAlignment="Center"
                                                       Foreground="#2196F3"
                                                       Width="20" Height="20"
                                                       Margin="0,0,12,0"/>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Prévisualisation des factures détectées"
                                             FontWeight="Medium"
                                             FontSize="14"
                                             Margin="0,0,0,4"/>
                                    <TextBlock Text="Vous pouvez redimensionner les colonnes et comparer les données avec votre fichier Excel. Les info-bulles affichent les données complètes."
                                             FontSize="12"
                                             Foreground="#666"
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                                
                                <Border Grid.Column="2"
                                       Background="#E3F2FD"
                                       CornerRadius="12"
                                       Padding="8,4">
                                    <TextBlock Text="{Binding PreviewFactures.Count, StringFormat='{}{0} factures'}"
                                             FontWeight="Medium"
                                             FontSize="12"
                                             Foreground="#1976D2"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Aperçu des factures -->
                        <DataGrid Grid.Row="3" 
                                 ItemsSource="{Binding PreviewFactures}"
                                 Visibility="{Binding HasPreviewData, Converter={StaticResource BoolToVisConverter}}"
                                 Style="{StaticResource MaterialDesignDataGrid}"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 Margin="0,16,0,0"
                                 CanUserResizeColumns="True"
                                 CanUserReorderColumns="True"
                                 GridLinesVisibility="Horizontal"
                                 HeadersVisibility="Column"
                                 AlternatingRowBackground="#FAFAFA"
                                 FontSize="13"
                                 RowHeight="35">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Feuille" Binding="{Binding NomFeuille}" MinWidth="100" Width="SizeToHeader">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Medium"/>
                                            <Setter Property="Foreground" Value="#2196F3"/>
                                            <Setter Property="ToolTip" Value="{Binding NomFeuille}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="N° Facture" Binding="{Binding NumeroFacture}" MinWidth="110" Width="SizeToHeader">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#333"/>
                                            <Setter Property="ToolTip" Value="{Binding NumeroFacture}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Client" Binding="{Binding NomClient}" MinWidth="200" Width="Auto">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="NoWrap"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="ToolTip" Value="{Binding NomClient}"/>
                                            <Setter Property="Foreground" Value="#444"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Date" Binding="{Binding DateFacture, StringFormat='dd/MM/yyyy'}" MinWidth="100" Width="SizeToHeader">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="ToolTip" Value="{Binding DateFacture, StringFormat='dddd dd MMMM yyyy'}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Moyen Paiement" Binding="{Binding MoyenPaiement}" MinWidth="150" Width="Auto">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="NoWrap"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="ToolTip" Value="{Binding MoyenPaiement}"/>
                                            <Setter Property="FontStyle" Value="Italic"/>
                                            <Setter Property="Foreground" Value="#666"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Nb Prod." Binding="{Binding NombreProduits}" MinWidth="80" Width="SizeToHeader">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Medium"/>
                                            <Setter Property="ToolTip" Value="{Binding NombreProduits, StringFormat='{}{0} produits'}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Montant (FCFA)" Binding="{Binding MontantEstime, StringFormat='N0'}" MinWidth="120" Width="SizeToHeader">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                            <Setter Property="ToolTip" Value="{Binding MontantEstime, StringFormat='Montant: {0:N0} FCFA'}"/>
                                            <Setter Property="Margin" Value="0,0,8,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTemplateColumn Header="État" Width="80" MinWidth="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding EstValide, Converter={StaticResource BoolToLightColorConverter}}"
                                                   CornerRadius="12"
                                                   Padding="8,4"
                                                   HorizontalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="{Binding EstValide, Converter={StaticResource BoolToIconConverter}}"
                                                                           Foreground="{Binding EstValide, Converter={StaticResource BoolToColorConverter}}"
                                                                           Width="14" Height="14"
                                                                           Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding EstValide, Converter={StaticResource BoolToStatusConverter}}"
                                                             FontSize="10"
                                                             FontWeight="Medium"
                                                             Foreground="{Binding EstValide, Converter={StaticResource BoolToColorConverter}}"/>
                                                </StackPanel>
                                                <Border.ToolTip>
                                                    <TextBlock>
                                                        <Run Text="État: "/>
                                                        <Run Text="{Binding EstValide, Converter={StaticResource BoolToStatusConverter}}" FontWeight="Bold"/>
                                                        <LineBreak/>
                                                        <Run Text="Client trouvé: " FontWeight="Medium"/>
                                                        <Run Text="{Binding ClientTrouve, Converter={StaticResource BoolToYesNoConverter}}"/>
                                                    </TextBlock>
                                                </Border.ToolTip>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </materialDesign:Card>

                <!-- Étape 3: Import -->
                <materialDesign:Card Style="{StaticResource StepCardStyle}"
                                   Visibility="{Binding CanImport, Converter={StaticResource BoolToVisConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" 
                               Background="#FFF3E0" 
                               CornerRadius="20" 
                               Width="40" Height="40"
                               Margin="0,0,16,0">
                            <TextBlock Text="3" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"
                                     FontWeight="Bold" 
                                     FontSize="16"
                                     Foreground="#F57C00"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Import des factures" 
                                     Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                     FontWeight="Medium"/>
                            <TextBlock Text="Traitement et intégration des factures en base de données" 
                                     Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </StackPanel>
                        
                        <Button Grid.Column="2" 
                               Content="IMPORTER"
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Background="#FF5722"
                               BorderBrush="#FF5722"
                               Command="{Binding ImportCommand}"
                               IsEnabled="{Binding CanExecuteImport}"
                               Width="120"/>
                    </Grid>
                </materialDesign:Card>

                <!-- Résultats import -->
                <materialDesign:Card Style="{StaticResource StepCardStyle}"
                                   Visibility="{Binding HasImportResult, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <materialDesign:PackIcon Grid.Column="0"
                                                   Kind="{Binding ImportResultIcon}"
                                                   Width="32" Height="32"
                                                   Foreground="{Binding ImportResultColor}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,16,0"/>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding ImportResultMessage}" 
                                         Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                         FontWeight="Medium"/>
                                <TextBlock Text="{Binding ImportResultDetails}" 
                                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                         Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Détails des factures importées -->
                        <Expander Header="Détails des factures importées" 
                                 Margin="0,16,0,0"
                                 Visibility="{Binding HasDetailedResults, Converter={StaticResource BoolToVisConverter}}">
                            <DataGrid ItemsSource="{Binding ImportedFactures}"
                                     Style="{StaticResource MaterialDesignDataGrid}"
                                     AutoGenerateColumns="False"
                                     IsReadOnly="True"
                                     Margin="0,8,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Feuille" Binding="{Binding NomFeuille}" Width="120"/>
                                    <DataGridTextColumn Header="N° Facture" Binding="{Binding NumeroFacture}" Width="100"/>
                                    <DataGridTextColumn Header="État" Binding="{Binding EstImportee, Converter={StaticResource BoolToStateConverter}}" Width="100"/>
                                    <DataGridTextColumn Header="Produits" Binding="{Binding NombreProduits}" Width="80"/>
                                    <DataGridTextColumn Header="Montant" Binding="{Binding MontantTotal, StringFormat='N0'}" Width="100"/>
                                    <DataGridTextColumn Header="Erreur" Binding="{Binding MessageErreur}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Expander>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>

        <!-- Barre de progression -->
        <ProgressBar Grid.Row="2" 
                    IsIndeterminate="{Binding IsProcessing}"
                    Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisConverter}}"
                    Style="{StaticResource MaterialDesignLinearProgressBar}"
                    Margin="0,16,0,0"/>
    </Grid>
</UserControl>
