<Window x:Class="FNEV4.Presentation.Views.ImportTraitement.Sage100PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:FNEV4.Presentation.Converters"
        mc:Ignorable="d"
        Title="Aperçu des Factures Sage 100" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MaterialDesignWindow}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        <converters:BoolToIconConverter x:Key="BoolToIconConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToStateConverter x:Key="BoolToStateConverter"/>
        <converters:ProduitsToTooltipConverter x:Key="ProduitsToTooltipConverter"/>
        
        <Style x:Key="HeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline5TextBlock}">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style x:Key="DataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource MaterialDesignDataGrid}">
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource MaterialDesignDivider}"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource MaterialDesignDivider}"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <materialDesign:PackIcon Grid.Column="0" 
                                   Kind="FileDocumentMultiple" 
                                   Width="32" Height="32"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
            
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="Aperçu des Factures Sage 100" 
                         Style="{StaticResource HeaderStyle}"/>
                <TextBlock Text="Visualisation détaillée des factures détectées avant import" 
                         Style="{StaticResource MaterialDesignBody2TextBlock}"
                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </StackPanel>
            
            <Button Grid.Column="2" 
                   Content="Fermer"
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   Click="CloseButton_Click"
                   Width="100"/>
        </Grid>

        <!-- Statistiques -->
        <materialDesign:Card Grid.Row="1" 
                           Padding="16" 
                           Margin="0,0,0,16"
                           materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total fichiers -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="FileCabinet" 
                                           Width="24" Height="24"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                                           HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalFiles}" 
                             Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                             HorizontalAlignment="Center"
                             Foreground="{DynamicResource PrimaryHueMidBrush}"
                             FontWeight="Bold"/>
                    <TextBlock Text="Fichiers trouvés" 
                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Fichiers valides -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="CheckCircle" 
                                           Width="24" Height="24"
                                           Foreground="Green"
                                           HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ValidFiles}" 
                             Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                             HorizontalAlignment="Center"
                             Foreground="Green"
                             FontWeight="Bold"/>
                    <TextBlock Text="Fichiers valides" 
                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Total factures -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="FileDocument" 
                                           Width="24" Height="24"
                                           Foreground="{DynamicResource SecondaryHueMidBrush}"
                                           HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalInvoices}" 
                             Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                             HorizontalAlignment="Center"
                             Foreground="{DynamicResource SecondaryHueMidBrush}"
                             FontWeight="Bold"/>
                    <TextBlock Text="Factures détectées" 
                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Fichiers avec erreurs -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="AlertCircle" 
                                           Width="24" Height="24"
                                           Foreground="Orange"
                                           HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding InvalidFiles}" 
                             Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                             HorizontalAlignment="Center"
                             Foreground="Orange"
                             FontWeight="Bold"/>
                    <TextBlock Text="Fichiers avec erreurs" 
                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- DataGrid des factures -->
        <materialDesign:Card Grid.Row="2" 
                           Padding="0" 
                           materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <DataGrid x:Name="InvoicesDataGrid"
                     Style="{StaticResource DataGridStyle}"
                     ItemsSource="{Binding InvoicesPreviews}"
                     Margin="0">
                
                <DataGrid.Columns>
                    <!-- Fichier Source -->
                    <DataGridTextColumn Header="Fichier Source" 
                                      Binding="{Binding FichierSource}" 
                                      Width="200"
                                      MinWidth="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="ToolTip" Value="{Binding FichierSource}" />
                                <Setter Property="FontWeight" Value="Medium"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- Numéro de Facture -->
                    <DataGridTextColumn Header="N° Facture" 
                                      Binding="{Binding NumeroFacture}" 
                                      Width="120"
                                      MinWidth="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- Date Facture -->
                    <DataGridTextColumn Header="Date" 
                                      Binding="{Binding DateFacture, StringFormat=dd/MM/yyyy}" 
                                      Width="100"
                                      MinWidth="80"/>
                    
                    <!-- Code Client -->
                    <DataGridTextColumn Header="Code Client" 
                                      Binding="{Binding CodeClient}" 
                                      Width="100"
                                      MinWidth="80"/>
                    
                    <!-- Nom Client -->
                    <DataGridTextColumn Header="Client" 
                                      Binding="{Binding IntituleClient}" 
                                      Width="200"
                                      MinWidth="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="ToolTip" Value="{Binding IntituleClient}" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- Point de Vente -->
                    <DataGridTextColumn Header="Point de Vente" 
                                      Binding="{Binding PointDeVente}" 
                                      Width="120"
                                      MinWidth="100"/>
                    
                    <!-- Montant HT -->
                    <DataGridTextColumn Header="Montant HT" 
                                      Binding="{Binding MontantHT, StringFormat=C2}" 
                                      Width="100"
                                      MinWidth="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- Montant TTC -->
                    <DataGridTextColumn Header="Montant TTC" 
                                      Binding="{Binding MontantTTC, StringFormat=C2}" 
                                      Width="100"
                                      MinWidth="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="{DynamicResource SecondaryHueMidBrush}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- Statut -->
                    <DataGridTemplateColumn Header="Statut" Width="120" MinWidth="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding EstValide, Converter={StaticResource BoolToColorConverter}}"
                                      CornerRadius="12" 
                                      Padding="8,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <materialDesign:PackIcon Grid.Column="0"
                                                               Kind="{Binding EstValide, Converter={StaticResource BoolToIconConverter}}"
                                                               Width="14" Height="14"
                                                               Foreground="White"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,4,0"/>
                                        
                                        <TextBlock Grid.Column="1"
                                                 Text="{Binding EstValide, Converter={StaticResource BoolToStateConverter}}"
                                                 Foreground="White"
                                                 FontSize="11"
                                                 FontWeight="Medium"
                                                 VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Produits -->
                    <DataGridTextColumn Header="Produits" 
                                      Binding="{Binding NombreProduits}" 
                                      Width="80"
                                      MinWidth="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="ToolTip" Value="{Binding Produits, Converter={StaticResource ProduitsToTooltipConverter}}" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <!-- Boutons d'action -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Informations supplémentaires -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="{Binding ErrorsCount, StringFormat='Erreurs détectées: {0}'}" 
                         Style="{StaticResource MaterialDesignCaptionTextBlock}"
                         Foreground="Orange"
                         Visibility="{Binding HasErrors, Converter={StaticResource BoolToVisConverter}}"/>
            </StackPanel>
            
            <!-- Bouton Exporter -->
            <Button Grid.Column="1" 
                   Content="Exporter en Excel"
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   Command="{Binding ExportPreviewCommand}"
                   Margin="0,0,8,0"
                   Width="140">
                <Button.ToolTip>
                    <ToolTip Content="Exporter l'aperçu des factures vers un fichier Excel"/>
                </Button.ToolTip>
            </Button>
            
            <!-- Bouton Importer -->
            <Button Grid.Column="2" 
                   Content="IMPORTER LES FACTURES"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Background="#FF5722"
                   BorderBrush="#FF5722"
                   Command="{Binding ImportInvoicesCommand}"
                   Margin="0,0,8,0"
                   Width="180">
                <Button.ToolTip>
                    <ToolTip Content="Importer toutes les factures valides en base de données"/>
                </Button.ToolTip>
            </Button>
            
            <!-- Bouton Fermer -->
            <Button Grid.Column="3" 
                   Content="Fermer"
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   Click="CloseButton_Click"
                   Width="100"/>
        </Grid>
    </Grid>
</Window>
