<Window x:Class="FNEV4.Presentation.Views.ImportTraitement.Sage100PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Aperçu des Factures Sage 100"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <!-- Styles conformes à la charte graphique FNEV4 -->
        <Style x:Key="HeaderIconStyle" TargetType="materialDesign:PackIcon">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        
        <Style x:Key="KpiCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="0,0,16,16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1"/>
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <Style x:Key="KpiTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
        </Style>
    </Window.Resources>

    <!-- Layout principal avec marges cohérentes -->
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="64" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- En-tête simplifié sans fond ni bordure -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Logo et titre -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Receipt" 
                                       Width="32" Height="32" 
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                                       VerticalAlignment="Center" />
                <TextBlock Text="Aperçu des Factures Sage 100" 
                         FontSize="20" 
                         FontWeight="Bold" 
                         Foreground="{DynamicResource MaterialDesignBody}" 
                         VerticalAlignment="Center" 
                         Margin="12,0,0,0" />
            </StackPanel>

            <!-- Description -->
            <TextBlock Grid.Column="1"
                     Text="Visualisation détaillée des factures détectées avant import"
                     FontSize="14"
                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center" />
        </Grid>

        <!-- Row 1: Filtres statistiques compacts au lieu des grandes cartes -->
        <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,16" materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Statistiques compactes avec filtres -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    
                    <!-- Bouton filtre: Toutes -->
                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding ShowAllFacturesCommand}"
                            Height="32" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileDocument" Width="16" Height="16" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding TotalFactures, StringFormat='{}{0} trouvées'}" FontSize="12" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Bouton filtre: Valides -->
                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding ShowValidFacturesCommand}"
                            Height="32" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" Width="16" Height="16" Margin="0,0,6,0" Foreground="#4CAF50"/>
                            <TextBlock Text="{Binding FacturesTraitees, StringFormat='{}{0} valides'}" FontSize="12" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Bouton filtre: Erreurs -->
                    <Button Style="{StaticResource SecondaryButtonStyle}" 
                            Command="{Binding ShowErrorFacturesCommand}"
                            Height="32">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircle" Width="16" Height="16" Margin="0,0,6,0" Foreground="#F44336"/>
                            <TextBlock Text="{Binding FacturesEnErreur, StringFormat='{}{0} erreurs'}" FontSize="12" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
                
                <!-- Recherche compacte -->
                <Grid Grid.Column="1" Width="300">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" 
                             materialDesign:HintAssist.Hint="Recherche..."
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13" 
                             Height="36" 
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Padding="0,8,0,0" />
                    
                    <Button Grid.Column="1" 
                            Style="{StaticResource MaterialDesignIconButton}"
                            Command="{Binding ClearSearchCommand}"
                            Width="36" Height="36" 
                            Margin="4,0,0,0"
                            VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                    </Button>
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- Row 2: DataGrid avec plus d'espace -->
        <materialDesign:Card Grid.Row="3" 
                           Padding="0" 
                           Margin="0,0,0,24"
                           materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <DataGrid Name="FacturesDataGrid"
                      ItemsSource="{Binding FilteredFactures}"
                      AutoGenerateColumns="False"
                      CanUserSortColumns="True"
                      CanUserReorderColumns="True"
                      CanUserResizeColumns="True"
                      SelectionMode="Extended"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      materialDesign:DataGridAssist.CellPadding="12,8"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="12,12"
                      FontSize="13"
                      RowHeight="52">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fichier Source" Binding="{Binding NomFichierSource}" Width="140" />
                    <DataGridTextColumn Header="N° Facture" Binding="{Binding NumeroFacture}" Width="110" />
                    <DataGridTextColumn Header="Date" Binding="{Binding DateFacture, StringFormat=dd/MM/yyyy}" Width="90" />
                    <DataGridTextColumn Header="Code Client" Binding="{Binding CodeClient}" Width="110" />
                    <DataGridTextColumn Header="Client" Binding="{Binding NomClient}" Width="220" />
                    <DataGridTextColumn Header="Point de Vente" Binding="{Binding PointDeVente}" Width="130" />
                    <DataGridTextColumn Header="Moyen Paiement" Binding="{Binding MoyenPaiement}" Width="130" />
                    <DataGridTextColumn Header="Montant HT" Binding="{Binding MontantHT, StringFormat=N2}" Width="110" />
                    <DataGridTextColumn Header="Montant TTC" Binding="{Binding MontantTTC, StringFormat=N2}" Width="110" />
                    
                    <!-- Colonne Statut avec couleurs sémantiques -->
                    <DataGridTemplateColumn Header="Statut" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Statut}" 
                                          FontWeight="Medium"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Statut}" Value="Valide">
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Statut}" Value="Erreur">
                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Colonne Produits avec style FNEV4 -->
                    <DataGridTemplateColumn Header="Produits" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource SecondaryButtonStyle}"
                                        Command="{Binding Path=DataContext.ShowProductDetailsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        ToolTip="Voir les détails des produits"
                                        Height="32"
                                        Padding="8,4"
                                        FontSize="12"
                                        HorizontalAlignment="Center"
                                        MinWidth="80">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Package" 
                                                               Width="14" Height="14" 
                                                               Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,4,0" />
                                        <TextBlock Text="{Binding NombreProduits}" 
                                                   FontWeight="Medium" 
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <!-- Row 4: Boutons d'actions style FNEV4 -->
        <materialDesign:Card Grid.Row="4" 
                           Padding="24" 
                           materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <!-- Bouton Exporter -->
                <Button Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ExportToExcelCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileExcel" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Exporter en Excel"/>
                    </StackPanel>
                </Button>
                
                <!-- Bouton principal Import -->
                <Button Style="{StaticResource ActionButtonStyle}"
                        Command="{Binding ImportFacturesCommand}"
                        Background="#FF5722"
                        BorderBrush="#FF5722">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Import" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="IMPORTER LES FACTURES"/>
                    </StackPanel>
                </Button>
                
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
