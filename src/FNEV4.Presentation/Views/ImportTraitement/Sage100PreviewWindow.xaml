<Window x:Class="FNEV4.Presentation.Views.ImportTraitement.Sage100PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Aperçu des Factures Sage 100"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Row 0: En-tête avec titre et description -->
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <materialDesign:PackIcon Kind="Receipt" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0" />
                <TextBlock Text="Aperçu des Factures Sage 100" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" />
            </StackPanel>
            <TextBlock Text="Visualisation détaillée des factures détectées avant import" 
                       HorizontalAlignment="Center" 
                       FontSize="14" 
                       Foreground="{DynamicResource MaterialDesignBodyLight}" />
        </StackPanel>

        <!-- Row 1: Statistiques en une ligne -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,10">
            <Border Background="{DynamicResource PrimaryHueMidBrush}" CornerRadius="15" Padding="15,10" Margin="10,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FileDocument" Foreground="White" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <TextBlock Text="{Binding TotalFactures}" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" />
                    <TextBlock Text="Factures trouvées" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource SecondaryHueMidBrush}" CornerRadius="15" Padding="15,10" Margin="10,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="CheckCircle" Foreground="White" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <TextBlock Text="{Binding FacturesTraitees}" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" />
                    <TextBlock Text="Factures valides" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Border>

            <Border Background="#FF9800" CornerRadius="15" Padding="15,10" Margin="10,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AlertCircle" Foreground="White" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <TextBlock Text="{Binding FacturesEnErreur}" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" />
                    <TextBlock Text="Factures avec erreurs" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Row 2: Barre de recherche rapide -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,10">
            <TextBox Width="400" 
                     materialDesign:HintAssist.Hint="Recherche rapide (numéro facture, client, montant...)"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="14" />
            <Button Content="Effacer" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding ClearSearchCommand}"
                    Margin="10,0,0,0" />
        </StackPanel>

        <!-- Row 3: DataGrid -->
        <DataGrid Grid.Row="3" 
                  Name="FacturesDataGrid"
                  ItemsSource="{Binding FilteredFactures}"
                  AutoGenerateColumns="False"
                  CanUserSortColumns="True"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  SelectionMode="Extended"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Margin="20,10,20,10"
                  materialDesign:DataGridAssist.CellPadding="8"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="8">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Fichier Source" Binding="{Binding NomFichierSource}" Width="120" />
                <DataGridTextColumn Header="N° Facture" Binding="{Binding NumeroFacture}" Width="100" />
                <DataGridTextColumn Header="Date" Binding="{Binding DateFacture, StringFormat=dd/MM/yyyy}" Width="80" />
                <DataGridTextColumn Header="Code Client" Binding="{Binding CodeClient}" Width="100" />
                <DataGridTextColumn Header="Client" Binding="{Binding NomClient}" Width="200" />
                <DataGridTextColumn Header="Point de Vente" Binding="{Binding PointDeVente}" Width="120" />
                <DataGridTextColumn Header="Moyen Paiement" Binding="{Binding MoyenPaiement}" Width="120" />
                <DataGridTextColumn Header="Montant HT" Binding="{Binding MontantHT, StringFormat=N2}" Width="100" />
                <DataGridTextColumn Header="Montant TTC" Binding="{Binding MontantTTC, StringFormat=N2}" Width="100" />
                <DataGridTextColumn Header="Statut" Binding="{Binding Statut}" Width="80" />
                
                <!-- Colonne Produits avec icône cliquable -->
                <DataGridTemplateColumn Header="Produits" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Command="{Binding DataContext.ShowProductDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    ToolTip="Voir les détails des produits">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding NombreProduits}" 
                                               FontWeight="Bold" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,5,0" />
                                    <materialDesign:PackIcon Kind="Package" Width="16" Height="16" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Row 4: Boutons d'actions -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Content="Exporter en Excel" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="5" />
            
            <Button Content="IMPORTER LES FACTURES" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="{DynamicResource SecondaryHueMidBrush}"
                    Margin="5" />
            
            <Button Content="Fermer" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    IsCancel="True"
                    Margin="5" />
        </StackPanel>
    </Grid>
</Window>
