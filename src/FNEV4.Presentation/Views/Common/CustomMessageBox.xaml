<Window x:Class="FNEV4.Presentation.Views.Common.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Message" Height="250" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête avec icône et titre -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <materialDesign:PackIcon x:Name="MessageIcon" 
                                     Kind="Information" 
                                     Width="24" Height="24" 
                                     Margin="0,0,10,0"
                                     VerticalAlignment="Center"/>
            <TextBlock x:Name="TitleText" 
                       Text="Information" 
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Message -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="MessageText" 
                       Text="Message content here" 
                       TextWrapping="Wrap"
                       Style="{StaticResource MaterialDesignBody1TextBlock}"/>
        </ScrollViewer>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="DetailsButton" 
                    Content="Consulter les détails" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="0,0,10,0"
                    Visibility="Collapsed"
                    Click="DetailsButton_Click"/>
            
            <Button Content="OK" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    IsDefault="True"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>