<Window x:Class="FNEV4.Presentation.Views.Special.ImportExceptionnelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Import Exceptionnel de Clients" 
        Height="700" Width="900"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Styles personnalisés -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,16,0,8"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="DescriptionTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="StatsCardStyle" TargetType="md:Card">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>

        <Style x:Key="CenterAlignedTextBlock" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Convertisseurs -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- En-tête -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="⚠️ Import Exceptionnel de Clients" 
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FF9800"/>
            <TextBlock Text="Système temporaire pour import d'un format Excel spécial" 
                       FontSize="14"
                       Foreground="Gray"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Contenu principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Section 1: Sélection du fichier -->
                <md:Card Margin="0,0,0,16" Padding="20">
                    <StackPanel>
                        <TextBlock Text="1. Sélection du fichier" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock Text="Choisissez un fichier Excel (.xlsx) contenant les données clients à importer" 
                                   Style="{StaticResource DescriptionTextStyle}"/>
                        
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="FichierPathTextBox" 
                                     Grid.Column="0"
                                     Text=""
                                     IsReadOnly="True"
                                     Margin="0,0,8,0"/>

                            <Button x:Name="SelectionnerFichierButton" 
                                    Grid.Column="1"
                                    Content="Parcourir..."
                                    Click="SelectionnerFichierButton_Click"
                                    Width="120"/>
                        </Grid>
                    </StackPanel>
                </md:Card>
                
                <!-- Section 2: Actions et aperçu -->
                <md:Card Margin="0,0,0,16" Padding="20">
                    <StackPanel>
                        <TextBlock Text="2. Aperçu et validation" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock Text="Analysez le contenu du fichier avant l'importation définitive" 
                                   Style="{StaticResource DescriptionTextStyle}"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,8">
                            <Button x:Name="PreviewButton" 
                                    Content="🔍 Analyser le fichier"
                                    Click="PreviewButton_Click"
                                    IsEnabled="False"
                                    Margin="0,0,16,0"/>
                            
                            <Button x:Name="ImportButton" 
                                    Content="📥 Importer en base"
                                    Click="ImportButton_Click"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </StackPanel>
                </md:Card>
                
                <!-- Section 2.1: Statistiques d'analyse -->
                <md:Card x:Name="ResultatsCard" 
                         Margin="0,0,0,16" 
                         Padding="20"
                         Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="📊" 
                                       FontSize="20"
                                       Foreground="#2196F3" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="2.1 Statistiques d'analyse" 
                                       Style="{StaticResource SectionHeaderStyle}" 
                                       Margin="0"/>
                        </StackPanel>
                        
                        <UniformGrid Columns="4" Margin="0,0,0,16">
                            <md:Card Style="{StaticResource StatsCardStyle}" Background="#4CAF50">
                                <StackPanel>
                                    <TextBlock x:Name="ClientsExtraitsText" 
                                               Text="0" 
                                               Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                    <TextBlock Text="Clients extraits" 
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}" 
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                </StackPanel>
                            </md:Card>

                            <md:Card Style="{StaticResource StatsCardStyle}" Background="#2196F3">
                                <StackPanel>
                                    <TextBlock x:Name="ClientsValidesText" 
                                               Text="0" 
                                               Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                    <TextBlock Text="Clients valides" 
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}" 
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                </StackPanel>
                            </md:Card>

                            <md:Card Style="{StaticResource StatsCardStyle}" Background="#F44336">
                                <StackPanel>
                                    <TextBlock x:Name="ErreursText" 
                                               Text="0" 
                                               Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                    <TextBlock Text="Erreurs" 
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}" 
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                </StackPanel>
                            </md:Card>

                            <md:Card Style="{StaticResource StatsCardStyle}" Background="#FF9800">
                                <StackPanel>
                                    <TextBlock x:Name="DoublonsText" 
                                               Text="0" 
                                               Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                    <TextBlock Text="Doublons" 
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}" 
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                </StackPanel>
                            </md:Card>
                        </UniformGrid>
                    </StackPanel>
                </md:Card>
                
                <!-- Section 3: Liste des clients détectés -->
                <md:Card x:Name="ClientsCard" 
                         Margin="0,0,0,16" 
                         Padding="20"
                         Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="👥" 
                                       FontSize="20"
                                       Foreground="#2196F3" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="3. Clients trouvés dans le fichier" 
                                       Style="{StaticResource SectionHeaderStyle}" 
                                       Margin="0"/>
                        </StackPanel>
                        
                        <!-- Liste des clients avec DataGrid -->
                        <Border BorderBrush="LightGray" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                MaxHeight="400">
                            <DataGrid x:Name="ClientsDataGrid" 
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      SelectionMode="Extended"
                                      FontSize="11"
                                      RowHeight="32"
                                      HorizontalScrollBarVisibility="Auto">
                                
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Code" 
                                                        Binding="{Binding CodeClient}" 
                                                        Width="100"
                                                        FontWeight="SemiBold"/>
                                    
                                    <DataGridTextColumn Header="NCC" 
                                                        Binding="{Binding NCC}" 
                                                        Width="120"/>
                                    
                                    <DataGridTextColumn Header="Nom" 
                                                        Binding="{Binding Nom}" 
                                                        Width="200"/>
                                    
                                    <DataGridTextColumn Header="Type" 
                                                        Binding="{Binding TypeFacturation}" 
                                                        Width="60"/>
                                    
                                    <DataGridTextColumn Header="Email" 
                                                        Binding="{Binding Email}" 
                                                        Width="160">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                <Setter Property="ToolTip" Value="{Binding Email}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </StackPanel>
                </md:Card>
                
                <!-- Section 4: Erreurs -->
                <md:Card x:Name="ErreursCard" 
                         Margin="0,0,0,16" 
                         Padding="20"
                         Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="⚠️" 
                                       FontSize="20"
                                       Foreground="#F44336" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="4. Erreurs détectées" 
                                       Style="{StaticResource SectionHeaderStyle}" 
                                       Margin="0"
                                       Foreground="#F44336"/>
                        </StackPanel>
                        
                        <ListBox x:Name="ErreursListBox" 
                                 MaxHeight="200"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </md:Card>
                
                <!-- Section 5: Progression -->
                <md:Card x:Name="ProgressCard" 
                         Margin="0,0,0,16" 
                         Padding="20"
                         Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="⏳" 
                                       FontSize="20"
                                       Foreground="#2196F3" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,8,0"/>
                            <TextBlock x:Name="ProgressText" 
                                       Text="Traitement en cours..." 
                                       Style="{StaticResource SectionHeaderStyle}" 
                                       Margin="0"/>
                        </StackPanel>
                        <ProgressBar x:Name="ProgressBar" IsIndeterminate="True" Height="6"/>
                    </StackPanel>
                </md:Card>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Boutons du bas -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="⚠️ Système temporaire - Ce dialog sera supprimé après utilisation"
                       FontSize="12"
                       Foreground="#FF9800"
                       VerticalAlignment="Center"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="VoirDocumentationButton" 
                        Content="📖 Documentation"
                        Click="VoirDocumentationButton_Click"
                        Margin="0,0,8,0"/>
                
                <Button x:Name="FermerButton" 
                        Content="Fermer"
                        Click="FermerButton_Click"/>
            </StackPanel>
        </Grid>
        
    </Grid>
</Window>
