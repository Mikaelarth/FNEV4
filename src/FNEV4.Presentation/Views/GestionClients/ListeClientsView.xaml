<UserControl x:Class="FNEV4.Presentation.Views.GestionClients.ListeClientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1400"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <!-- Convertisseurs -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Styles cohÃ©rents avec les autres vues -->
        <Style x:Key="DatabaseCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="0,0,0,24"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2"/>
        </Style>

        <Style x:Key="HeaderIconStyle" TargetType="materialDesign:PackIcon">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        
        <!-- Styles pour DataGrid amÃ©liorÃ© -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource MaterialDesignDivider}"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource MaterialDesignSelection}"/>
            <Setter Property="materialDesign:DataGridAssist.CellPadding" Value="16,8"/>
        </Style>
        
        <!-- Style pour les en-tÃªtes de colonnes -->
        <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#BBDEFB"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
        
        <!-- Style pour les cellules -->
        <Style x:Key="CellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="32">

            <!-- En-tÃªte avec titre et actions -->
            <materialDesign:Card Style="{StaticResource DatabaseCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0" 
                                           Kind="AccountGroup" 
                                           Style="{StaticResource HeaderIconStyle}"/>
                    
                    <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Liste des clients" 
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                        <TextBlock Text="RÃ©fÃ©rentiel clients avec NCC et classification DGI" 
                                 FontSize="14" 
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                 Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding RefreshCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16"/>
                                <TextBlock Text="Actualiser" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Style="{StaticResource ActionButtonStyle}"
                                Command="{Binding ImportClientsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileExcel" Width="16" Height="16"/>
                                <TextBlock Text="Import Excel" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{DynamicResource SecondaryHueMidBrush}"
                                Command="{Binding ImportExceptionnelCommand}"
                                Margin="0,0,8,0"
                                ToolTip="Import temporaire pour format Excel spÃ©cial">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AlertCircle" Width="16" Height="16"/>
                                <TextBlock Text="Import Exceptionnel" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{DynamicResource MaterialDesignValidationSuccessBrush}"
                                Command="{Binding AddClientCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Width="16" Height="16"/>
                                <TextBlock Text="Nouveau client" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Filtres et recherche -->
            <materialDesign:Card Style="{StaticResource DatabaseCardStyle}">
                <StackPanel>
                    <TextBlock Text="ðŸ” Filtres et recherche"
                             FontSize="18" 
                             FontWeight="SemiBold"
                             Foreground="{DynamicResource MaterialDesignBody}"
                             Margin="0,0,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" MinWidth="300"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*" MinWidth="200"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*" MinWidth="180"/>
                        </Grid.ColumnDefinitions>

                        <!-- Recherche -->
                        <TextBox Grid.Column="0"
                                 Style="{StaticResource MaterialDesignFilledTextBox}"
                                 materialDesign:HintAssist.Hint="Rechercher par nom, code, NCC, email..."
                                 materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                                 Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>

                        <!-- Type de client -->
                        <ComboBox Grid.Column="2"
                                  Style="{StaticResource MaterialDesignFilledComboBox}"
                                  materialDesign:HintAssist.Hint="Type de client"
                                  ItemsSource="{Binding ClientTypes}"
                                  SelectedItem="{Binding SelectedClientType}"
                                  FontSize="14"
                                  Margin="0,0,0,8"/>

                        <!-- Statut -->
                        <ComboBox Grid.Column="4"
                                  Style="{StaticResource MaterialDesignFilledComboBox}"
                                  materialDesign:HintAssist.Hint="Statut"
                                  ItemsSource="{Binding StatusOptions}"
                                  SelectedItem="{Binding SelectedStatusOption}"
                                  DisplayMemberPath="Display"
                                  FontSize="14"
                                  Margin="0,0,0,8"/>
                    </Grid>

                    <!-- Actions de filtrage -->
                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <Button Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding ClearFiltersCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FilterRemove" Width="16" Height="16"/>
                                <TextBlock Text="Effacer filtres" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Style="{StaticResource ActionButtonStyle}"
                                Command="{Binding SearchCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Magnify" Width="16" Height="16"/>
                                <TextBlock Text="Rechercher" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Liste des clients -->
            <materialDesign:Card Style="{StaticResource DatabaseCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- En-tÃªte du tableau -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Grid.Column="0" 
                                               Kind="ViewList" 
                                               Width="20" Height="20"
                                               Foreground="{DynamicResource MaterialDesignBody}"
                                               VerticalAlignment="Center"/>
                        
                        <TextBlock Grid.Column="1" 
                                 Text="Clients rÃ©fÃ©rencÃ©s"
                                 FontSize="18" 
                                 FontWeight="SemiBold"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 VerticalAlignment="Center"
                                 Margin="12,0,0,0"/>
                        
                        <TextBlock Grid.Column="2" 
                                 Text="{Binding TotalCount, StringFormat='{}Total: {0} clients'}"
                                 FontSize="14" 
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                 VerticalAlignment="Center"/>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Clients}"
                              SelectedItem="{Binding SelectedClient}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              Style="{StaticResource MaterialDesignDataGrid}"
                              ColumnHeaderStyle="{StaticResource MaterialDesignDataGridColumnHeader}"
                              materialDesign:DataGridAssist.CellPadding="16,8"
                              materialDesign:DataGridAssist.ColumnHeaderPadding="16,8"
                              FontSize="14"
                              RowHeight="48"
                              AlternatingRowBackground="{DynamicResource MaterialDesignSelection}"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              EnableRowVirtualization="True"
                              EnableColumnVirtualization="True"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              VirtualizingPanel.IsContainerVirtualizable="True"
                              VirtualizingPanel.ScrollUnit="Pixel"
                              VirtualizingPanel.CacheLengthUnit="Page"
                              VirtualizingPanel.CacheLength="1,2"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.IsDeferredScrollingEnabled="False"
                              UseLayoutRounding="True"
                              SnapsToDevicePixels="True">
                        
                        <DataGrid.Columns>
                            <!-- Code client -->
                            <DataGridTextColumn Header="Code" 
                                                Binding="{Binding ClientCode}"
                                                Width="Auto"
                                                MinWidth="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="{DynamicResource SecondaryHueMidBrush}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Nom -->
                            <DataGridTextColumn Header="Nom/Raison sociale" 
                                                Binding="{Binding Name}"
                                                Width="2*"
                                                MinWidth="200">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="TextWrapping" Value="NoWrap"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Name}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- NCC -->
                            <DataGridTextColumn Header="NCC" 
                                                Binding="{Binding ClientNcc}"
                                                Width="Auto"
                                                MinWidth="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Type -->
                            <DataGridTextColumn Header="Type" 
                                                Binding="{Binding ClientType}"
                                                Width="Auto"
                                                MinWidth="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignValidationSuccessBrush}"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Email -->
                            <DataGridTextColumn Header="Email" 
                                                Binding="{Binding Email}"
                                                Width="1.5*"
                                                MinWidth="180">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                        <Setter Property="TextWrapping" Value="NoWrap"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                        <Setter Property="ToolTip" Value="{Binding Email}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- TÃ©lÃ©phone -->
                            <DataGridTextColumn Header="TÃ©lÃ©phone" 
                                                Binding="{Binding Phone}"
                                                Width="Auto"
                                                MinWidth="140">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                        <Setter Property="FontFamily" Value="Consolas"/>
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Statut -->
                            <DataGridTemplateColumn Header="Statut" Width="Auto" MinWidth="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               CornerRadius="12"
                                               Padding="8,4"
                                               MinWidth="60">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource MaterialDesignValidationSuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Background" Value="{DynamicResource MaterialDesignValidationErrorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     FontSize="12"
                                                     FontWeight="Medium"
                                                     Foreground="White">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Text" Value="Actif"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Text" Value="Inactif"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Date crÃ©ation -->
                            <DataGridTextColumn Header="CrÃ©Ã© le" 
                                                Binding="{Binding CreatedDate, StringFormat='{}{0:dd/MM/yyyy}'}"
                                                Width="Auto"
                                                MinWidth="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Actions -->
                            <DataGridTemplateColumn Header="Actions" CanUserSort="False" Width="Auto" MinWidth="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" 
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding DataContext.ViewClientDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Voir dÃ©tails"
                                                    Width="32" Height="32"
                                                    Padding="4">
                                                <materialDesign:PackIcon Kind="Eye" Width="16" Height="16"/>
                                            </Button>
                                            
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding DataContext.EditClientCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Modifier"
                                                    Width="32" Height="32"
                                                    Padding="4">
                                                <materialDesign:PackIcon Kind="Edit" Width="16" Height="16"/>
                                            </Button>
                                            
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding DataContext.DeleteClientCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Supprimer"
                                                    Width="32" Height="32"
                                                    Padding="4"
                                                    Foreground="{DynamicResource MaterialDesignValidationErrorBrush}">
                                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>

            <!-- Pagination -->
            <materialDesign:Card Style="{StaticResource DatabaseCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Taille de page -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Afficher:"
                                 VerticalAlignment="Center" 
                                 FontSize="14"
                                 Foreground="{DynamicResource MaterialDesignBody}"
                                 Margin="0,0,12,0"/>
                        
                        <ComboBox Style="{StaticResource MaterialDesignFilledComboBox}"
                                  materialDesign:HintAssist.Hint="Par page"
                                  ItemsSource="{Binding PageSizes}"
                                  SelectedItem="{Binding PageSize}"
                                  MinWidth="80"
                                  FontSize="14"
                                  Margin="0,0,12,0"/>
                        
                        <TextBlock Text="Ã©lÃ©ments par page"
                                 VerticalAlignment="Center" 
                                 FontSize="14"
                                 Foreground="{DynamicResource MaterialDesignBody}"/>
                    </StackPanel>

                    <!-- Informations de pagination -->
                    <TextBlock Grid.Column="1" 
                             Text="{Binding PaginationInfo}"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             FontSize="14"
                             FontWeight="Medium"
                             Foreground="{DynamicResource MaterialDesignBody}"/>

                    <!-- Navigation -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding PreviousPageCommand}"
                                IsEnabled="{Binding HasPreviousPage}"
                                ToolTip="Page prÃ©cÃ©dente"
                                Width="36" Height="36"
                                Margin="0,0,8,0">
                            <materialDesign:PackIcon Kind="ChevronLeft" Width="20" Height="20"/>
                        </Button>
                        
                        <Border Background="{DynamicResource MaterialDesignSelection}"
                                CornerRadius="18"
                                Padding="12,6"
                                VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentPage}" 
                                     FontWeight="SemiBold"
                                     FontSize="14"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                     HorizontalAlignment="Center"/>
                        </Border>
                        
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                Command="{Binding NextPageCommand}"
                                IsEnabled="{Binding HasNextPage}"
                                ToolTip="Page suivante"
                                Width="36" Height="36"
                                Margin="8,0,0,0">
                            <materialDesign:PackIcon Kind="ChevronRight" Width="20" Height="20"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

        </StackPanel>
    </ScrollViewer>
</UserControl>