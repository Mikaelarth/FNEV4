<UserControl x:Class="FNEV4.Presentation.Views.GestionClients.ListeClientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:FNEV4.Presentation.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Convertisseurs -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BooleanToStatusConverter x:Key="BooleanToStatusConverter"/>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
        
        <!-- Style pour les cartes de statistiques -->
        <Style x:Key="StatisticCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1"/>
        </Style>
        
        <!-- Style pour les boutons d'action -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconForegroundButton}">
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Statistiques -->
            <RowDefinition Height="Auto"/> <!-- Filtres -->
            <RowDefinition Height="*"/>    <!-- Liste -->
            <RowDefinition Height="Auto"/> <!-- Pagination -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“‹ Liste des clients" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="RÃ©fÃ©rentiel clients avec NCC et classification DGI" 
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding RefreshCommand}"
                            ToolTip="Actualiser la liste">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center"/>
                            <TextBlock Text="Actualiser" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="8,0"
                            Command="{Binding ImportClientsCommand}"
                            Background="{DynamicResource PrimaryHueDarkBrush}"
                            ToolTip="Importer des clients depuis Excel">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Import" VerticalAlignment="Center"/>
                            <TextBlock Text="Import Excel" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding AddClientCommand}"
                            Background="{DynamicResource SecondaryHueMidBrush}"
                            ToolTip="Ajouter un nouveau client">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                            <TextBlock Text="Nouveau client" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- STATISTIQUES -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,16"
                     Visibility="{Binding Statistics, Converter={StaticResource BooleanToVisibilityConverter}}">
            
            <!-- Total clients -->
            <materialDesign:Card Style="{StaticResource StatisticCardStyle}">
                <StackPanel>
                    <TextBlock Text="{Binding Statistics.TotalClients}" 
                               Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Total clients" 
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Clients actifs -->
            <materialDesign:Card Style="{StaticResource StatisticCardStyle}">
                <StackPanel>
                    <TextBlock Text="{Binding Statistics.ActiveClients}" 
                               Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                               Foreground="{DynamicResource SecondaryHueMidBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Clients actifs" 
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Clients avec NCC -->
            <materialDesign:Card Style="{StaticResource StatisticCardStyle}">
                <StackPanel>
                    <TextBlock Text="{Binding Statistics.ClientsWithNcc}" 
                               Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                               Foreground="{DynamicResource PrimaryHueDarkBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Avec NCC" 
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Entreprises -->
            <materialDesign:Card Style="{StaticResource StatisticCardStyle}">
                <StackPanel>
                    <TextBlock Text="{Binding Statistics.CompanyClients}" 
                               Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                               Foreground="{DynamicResource SecondaryHueDarkBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Entreprises" 
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>
        </UniformGrid>

        <!-- FILTRES ET RECHERCHE -->
        <materialDesign:Card Grid.Row="2" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Ligne 1: Recherche et filtres principaux -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Recherche -->
                    <TextBox Grid.Column="0"
                             materialDesign:HintAssist.Hint="Rechercher par nom, code, NCC, email..."
                             Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,16,0">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- Type de client -->
                    <ComboBox Grid.Column="1"
                              materialDesign:HintAssist.Hint="Type de client"
                              ItemsSource="{Binding ClientTypes}"
                              SelectedItem="{Binding SelectedClientType}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,16,0">
                    </ComboBox>

                    <!-- Statut -->
                    <ComboBox Grid.Column="2"
                              materialDesign:HintAssist.Hint="Statut"
                              SelectedValue="{Binding IsActiveFilter}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,16,0">
                        <ComboBoxItem Content="Tous" Tag="{x:Null}"/>
                        <ComboBoxItem Content="Actif" Tag="True"/>
                        <ComboBoxItem Content="Inactif" Tag="False"/>
                    </ComboBox>

                    <!-- Boutons d'action -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button Command="{Binding SearchCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                ToolTip="Rechercher">
                            <materialDesign:PackIcon Kind="Magnify"/>
                        </Button>
                        
                        <Button Command="{Binding ClearFiltersCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="8,0,0,0"
                                ToolTip="Effacer les filtres">
                            <materialDesign:PackIcon Kind="FilterRemove"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Ligne 2: Informations sur les filtres actifs -->
                <TextBlock Grid.Row="1" 
                           Text="{Binding ActiveFiltersInfo}"
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           Margin="0,8,0,0"
                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </Grid>
        </materialDesign:Card>

        <!-- LISTE DES CLIENTS -->
        <materialDesign:Card Grid.Row="3">
            <Grid>
                <!-- Progress bar pendant le chargement -->
                <ProgressBar IsIndeterminate="True"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                             VerticalAlignment="Top"/>

                <!-- Message d'erreur -->
                <materialDesign:Card Background="{DynamicResource ValidationErrorBrush}"
                                     Margin="16"
                                     Padding="16"
                                     Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AlertCircle" 
                                                 VerticalAlignment="Center"
                                                 Foreground="White"/>
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="White"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- DataGrid des clients -->
                <DataGrid ItemsSource="{Binding Clients}"
                          SelectedItem="{Binding SelectedClient}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          materialDesign:DataGridAssist.CellPadding="8"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Visibility="{Binding IsListVisible, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <DataGrid.Columns>
                        <!-- Actions -->
                        <DataGridTemplateColumn Header="Actions" Width="120" CanUserSort="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Command="{Binding DataContext.ViewClientDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ActionButtonStyle}"
                                                ToolTip="Voir dÃ©tails">
                                            <materialDesign:PackIcon Kind="Eye"/>
                                        </Button>
                                        
                                        <Button Command="{Binding DataContext.EditClientCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ActionButtonStyle}"
                                                ToolTip="Modifier">
                                            <materialDesign:PackIcon Kind="Pencil"/>
                                        </Button>
                                        
                                        <Button Command="{Binding DataContext.DeleteClientCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ActionButtonStyle}"
                                                ToolTip="Supprimer">
                                            <materialDesign:PackIcon Kind="Delete" Foreground="{DynamicResource ValidationErrorBrush}"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Code client -->
                        <DataGridTextColumn Header="Code" 
                                            Binding="{Binding ClientCode}" 
                                            Width="80"/>

                        <!-- Nom -->
                        <DataGridTextColumn Header="Nom/Raison sociale" 
                                            Binding="{Binding Name}" 
                                            Width="200"/>

                        <!-- NCC -->
                        <DataGridTextColumn Header="NCC" 
                                            Binding="{Binding ClientNcc}" 
                                            Width="120"/>

                        <!-- Type -->
                        <DataGridTextColumn Header="Type" 
                                            Binding="{Binding ClientType}" 
                                            Width="100"/>

                        <!-- Email -->
                        <DataGridTextColumn Header="Email" 
                                            Binding="{Binding Email}" 
                                            Width="180"/>

                        <!-- TÃ©lÃ©phone -->
                        <DataGridTextColumn Header="TÃ©lÃ©phone" 
                                            Binding="{Binding Phone}" 
                                            Width="120"/>

                        <!-- Statut -->
                        <DataGridTemplateColumn Header="Statut" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <materialDesign:Chip Content="{Binding IsActive, Converter={StaticResource BooleanToStatusConverter}}"
                                                         Background="{Binding IsActive, Converter={StaticResource BooleanToBrushConverter}}"
                                                         Foreground="White"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Date crÃ©ation -->
                        <DataGridTextColumn Header="CrÃ©Ã© le" 
                                            Binding="{Binding CreatedDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>

        <!-- PAGINATION -->
        <materialDesign:Card Grid.Row="4" Margin="0,16,0,0" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Taille de page -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Afficher:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding PageSizes}"
                              SelectedItem="{Binding PageSize}"
                              Width="80"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                    <TextBlock Text="Ã©lÃ©ments par page" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Informations de pagination -->
                <TextBlock Grid.Column="1" 
                           Text="{Binding PaginationInfo}"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <!-- Navigation -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding PreviousPageCommand}"
                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                            IsEnabled="{Binding HasPreviousPage}"
                            ToolTip="Page prÃ©cÃ©dente">
                        <materialDesign:PackIcon Kind="ChevronLeft"/>
                    </Button>
                    
                    <TextBlock Text="{Binding CurrentPage}" 
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               VerticalAlignment="Center"
                               Margin="16,0"/>
                    
                    <Button Command="{Binding NextPageCommand}"
                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                            IsEnabled="{Binding HasNextPage}"
                            ToolTip="Page suivante">
                        <materialDesign:PackIcon Kind="ChevronRight"/>
                    </Button>
                </StackPanel>

                <!-- Bouton aller Ã  la page -->
                <Button Grid.Column="3"
                        Content="Aller Ã  la page..."
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="16,0,0,0"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
