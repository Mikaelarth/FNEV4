<UserControl x:Class="FNEV4.Presentation.Views.GestionClients.ListeClientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1400">

    <UserControl.Resources>
        <!-- Convertisseurs -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Styles pour DataGrid amÃ©liorÃ© -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F5F5F5"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
        </Style>
        
        <!-- Style pour les en-tÃªtes de colonnes -->
        <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#BBDEFB"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
        
        <!-- Style pour les cellules -->
        <Style x:Key="CellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Style pour les boutons d'action -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F8FF"/>
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Filtres -->
            <RowDefinition Height="*"/>    <!-- Liste -->
            <RowDefinition Height="Auto"/> <!-- Pagination -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" 
                Background="#F8F9FA" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="20" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“‹ Liste des clients" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               Foreground="#1976D2"/>
                    <TextBlock Text="RÃ©fÃ©rentiel clients avec NCC et classification DGI" 
                               FontSize="14" 
                               Foreground="#666666"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ”„ Actualiser"
                            Command="{Binding RefreshCommand}"
                            Background="#E3F2FD"
                            Foreground="#1976D2"
                            Padding="16,10"
                            Margin="0,0,10,0"
                            BorderThickness="1"
                            BorderBrush="#BBDEFB"
                            FontSize="13"
                            MinWidth="120"/>
                    
                    <Button Content="ðŸ“¥ Import Excel"
                            Command="{Binding ImportClientsCommand}"
                            Background="#1976D2"
                            Foreground="White"
                            Padding="16,10"
                            Margin="0,0,10,0"
                            BorderThickness="0"
                            FontSize="13"
                            MinWidth="130"/>
                    
                    <Button Content="âž• Nouveau client"
                            Command="{Binding AddClientCommand}"
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="16,10"
                            BorderThickness="0"
                            FontSize="13"
                            MinWidth="140"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- FILTRES ET RECHERCHE -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="20" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" MinWidth="300"/>
                    <ColumnDefinition Width="Auto" MinWidth="220"/>
                    <ColumnDefinition Width="Auto" MinWidth="180"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Recherche -->
                <TextBox Grid.Column="0"
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14"
                         Padding="12,10"
                         Margin="0,0,16,0"
                         BorderBrush="#E0E0E0"
                         BorderThickness="1">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="White" 
                                                BorderBrush="#E0E0E0" 
                                                BorderThickness="1" 
                                                CornerRadius="4">
                                            <Grid>
                                                <TextBlock Text="ðŸ” Rechercher par nom, code, NCC, email..." 
                                                           Foreground="#999999" 
                                                           Margin="12,10"
                                                           Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="12,10"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Type de client -->
                <ComboBox Grid.Column="1"
                          Margin="0,0,16,0"
                          FontSize="14"
                          Padding="8,8"
                          BorderBrush="#E0E0E0"
                          MinWidth="200">
                    <ComboBoxItem Content="ðŸ“‹ Tous les types" IsSelected="True"/>
                    <ComboBoxItem Content="ðŸ‘¤ B2C - Particulier"/>
                    <ComboBoxItem Content="ðŸ¢ B2B - Entreprise"/>
                    <ComboBoxItem Content="ðŸ›ï¸ B2G - Gouvernement"/>
                    <ComboBoxItem Content="ðŸ’¼ B2F - Financier"/>
                </ComboBox>

                <!-- Statut -->
                <ComboBox Grid.Column="2"
                          Margin="0,0,16,0"
                          FontSize="14"
                          Padding="8,8"
                          BorderBrush="#E0E0E0"
                          MinWidth="160">
                    <ComboBoxItem Content="ðŸ“Š Tous les statuts" IsSelected="True"/>
                    <ComboBoxItem Content="âœ… Clients actifs"/>
                    <ComboBoxItem Content="âŒ Clients inactifs"/>
                </ComboBox>

                <!-- Boutons d'action -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ”"
                            Command="{Binding SearchCommand}"
                            MinWidth="44"
                            MinHeight="40"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="8,4"
                            FontSize="16"
                            ToolTip="Rechercher"/>
                    
                    <Button Content="ðŸ—‘ï¸"
                            Command="{Binding ClearFiltersCommand}"
                            MinWidth="44"
                            MinHeight="40"
                            Background="#F44336"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="8,4"
                            FontSize="16"
                            Margin="8,0,0,0"
                            ToolTip="Effacer les filtres"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- LISTE DES CLIENTS -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="8">
                <DataGrid ItemsSource="{Binding Clients}"
                          SelectedItem="{Binding SelectedClient}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                          CellStyle="{StaticResource CellStyle}"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">                <DataGrid.Columns>
                    <!-- Code client -->
                    <DataGridTextColumn Header="Code" 
                                        Binding="{Binding ClientCode}" 
                                        Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="Foreground" Value="#1976D2"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Nom -->
                    <DataGridTextColumn Header="Nom/Raison sociale" 
                                        Binding="{Binding Name}" 
                                        Width="220">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="TextWrapping" Value="NoWrap"/>
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                <Setter Property="ToolTip" Value="{Binding Name}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- NCC -->
                    <DataGridTextColumn Header="NCC" 
                                        Binding="{Binding ClientNcc}" 
                                        Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Consolas"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Type -->
                    <DataGridTextColumn Header="Type" 
                                        Binding="{Binding ClientType}" 
                                        Width="70">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="Foreground" Value="#4CAF50"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Email -->
                    <DataGridTextColumn Header="Email" 
                                        Binding="{Binding Email}" 
                                        Width="200">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="NoWrap"/>
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                <Setter Property="Foreground" Value="#666666"/>
                                <Setter Property="ToolTip" Value="{Binding Email}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- TÃ©lÃ©phone -->
                    <DataGridTextColumn Header="TÃ©lÃ©phone" 
                                        Binding="{Binding Phone}" 
                                        Width="140">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Consolas"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Statut avec Template -->
                    <DataGridTemplateColumn Header="Statut" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Medium">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                    <Setter Property="Text" Value="âœ… Actif"/>
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter Property="Text" Value="âŒ Inactif"/>
                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Date crÃ©ation -->
                    <DataGridTextColumn Header="CrÃ©Ã© le" 
                                        Binding="{Binding CreatedDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                        Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#999999"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Actions - Ã€ L'EXTRÃŠME DROITE -->
                    <DataGridTemplateColumn Header="Actions" Width="140" CanUserSort="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                    <Button Content="ðŸ‘"
                                            Command="{Binding DataContext.ViewClientDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButtonStyle}"
                                            ToolTip="Voir dÃ©tails"/>
                                    
                                    <Button Content="âœï¸"
                                            Command="{Binding DataContext.EditClientCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButtonStyle}"
                                            ToolTip="Modifier"/>
                                    
                                    <Button Content="ðŸ—‘ï¸"
                                            Command="{Binding DataContext.DeleteClientCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButtonStyle}"
                                            ToolTip="Supprimer"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- PAGINATION -->
        <Border Grid.Row="3" 
                Background="#F8F9FA" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="16" 
                Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Taille de page -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Afficher:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox MinWidth="60" FontSize="14" Padding="8,4">
                        <ComboBoxItem Content="25" IsSelected="True"/>
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                        <ComboBoxItem Content="200"/>
                    </ComboBox>
                    <TextBlock Text="Ã©lÃ©ments par page" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Informations de pagination -->
                <TextBlock Grid.Column="1" 
                           Text="{Binding PaginationInfo}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="14"
                           Foreground="#666666"/>

                <!-- Navigation -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="â¬…ï¸"
                            Command="{Binding PreviousPageCommand}"
                            IsEnabled="{Binding HasPreviousPage}"
                            MinWidth="44"
                            MinHeight="32"
                            Padding="8,4"
                            Margin="0,0,8,0"
                            FontSize="16"
                            ToolTip="Page prÃ©cÃ©dente"/>
                    
                    <TextBlock Text="{Binding CurrentPage}" 
                               VerticalAlignment="Center"
                               FontWeight="Medium"
                               FontSize="14"
                               Margin="12,0"/>
                    
                    <Button Content="âž¡ï¸"
                            Command="{Binding NextPageCommand}"
                            IsEnabled="{Binding HasNextPage}"
                            MinWidth="44"
                            MinHeight="32"
                            Padding="8,4"
                            Margin="8,0,0,0"
                            FontSize="16"
                            ToolTip="Page suivante"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>