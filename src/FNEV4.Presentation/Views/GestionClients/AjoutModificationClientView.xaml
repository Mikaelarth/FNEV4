<Window x:Class="FNEV4.Presentation.Views.GestionClients.AjoutModificationClientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{Binding WindowTitle}"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MaterialDesignWindow}">

    <Window.Resources>
        <!-- Style pour les TextBox -->
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style pour les ComboBox -->
        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Style pour les CheckBox -->
        <Style x:Key="FormCheckBoxStyle" TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <materialDesign:Card Grid.Row="0" Margin="16,16,16,8">
            <Grid Margin="24,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="{Binding HeaderIcon}" 
                                       VerticalAlignment="Center"
                                       Width="32" Height="32"
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding HeaderTitle}" 
                             Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                             Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="{Binding HeaderSubtitle}" 
                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                             Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- FORM CONTENT -->
        <ScrollViewer Grid.Row="1" Margin="16,0" VerticalScrollBarVisibility="Auto">
            <materialDesign:Card>
                <Grid Margin="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- COLONNE GAUCHE -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Informations générales" 
                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                 Margin="0,0,0,16"
                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                        <!-- Code Client -->
                        <TextBox x:Name="CodeClientTextBox"
                               Style="{StaticResource FormTextBoxStyle}"
                               materialDesign:HintAssist.Hint="Code Client *"
                               Text="{Binding Client.Code, UpdateSourceTrigger=PropertyChanged}"
                               materialDesign:HintAssist.HelperText="Code unique du client"/>

                        <!-- Type de Client -->
                        <ComboBox Style="{StaticResource FormComboBoxStyle}"
                                materialDesign:HintAssist.Hint="Type de Client *"
                                ItemsSource="{Binding ClientTypes}"
                                SelectedItem="{Binding Client.Type}"/>

                        <!-- Nom/Raison Sociale -->
                        <TextBox Style="{StaticResource FormTextBoxStyle}"
                               materialDesign:HintAssist.Hint="Nom/Raison Sociale *"
                               Text="{Binding Client.Name, UpdateSourceTrigger=PropertyChanged}"
                               materialDesign:HintAssist.HelperText="Nom complet ou raison sociale"/>

                        <!-- NCC (Numéro Carte Contribuable) -->
                        <TextBox Style="{StaticResource FormTextBoxStyle}"
                               materialDesign:HintAssist.Hint="NCC (Numéro Carte Contribuable)"
                               Text="{Binding Client.Ncc, UpdateSourceTrigger=PropertyChanged}"
                               materialDesign:HintAssist.HelperText="Numéro de carte contribuable DGI"/>

                        <!-- Email -->
                        <TextBox Style="{StaticResource FormTextBoxStyle}"
                               materialDesign:HintAssist.Hint="Adresse Email"
                               Text="{Binding Client.Email, UpdateSourceTrigger=PropertyChanged}"
                               materialDesign:HintAssist.HelperText="Adresse email principale"/>

                        <!-- Téléphone -->
                        <TextBox Style="{StaticResource FormTextBoxStyle}"
                               materialDesign:HintAssist.Hint="Téléphone"
                               Text="{Binding Client.Phone, UpdateSourceTrigger=PropertyChanged}"
                               materialDesign:HintAssist.HelperText="Numéro de téléphone principal"/>
                    </StackPanel>

                    <!-- COLONNE DROITE -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Détails complémentaires" 
                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                 Margin="0,0,0,16"
                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                        <!-- Adresse -->
                        <TextBox Style="{StaticResource FormTextBoxStyle}"
                               materialDesign:HintAssist.Hint="Adresse"
                               Text="{Binding Client.Address, UpdateSourceTrigger=PropertyChanged}"
                               materialDesign:HintAssist.HelperText="Adresse physique complète"/>

                        <!-- Ville -->
                        <TextBox Style="{StaticResource FormTextBoxStyle}"
                               materialDesign:HintAssist.Hint="Ville"
                               Text="{Binding Client.City, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Code Postal -->
                        <TextBox Style="{StaticResource FormTextBoxStyle}"
                               materialDesign:HintAssist.Hint="Code Postal"
                               Text="{Binding Client.PostalCode, UpdateSourceTrigger=PropertyChanged}"/>

                        <!-- Notes -->
                        <TextBox Style="{StaticResource FormTextBoxStyle}"
                               materialDesign:HintAssist.Hint="Notes"
                               Text="{Binding Client.Notes, UpdateSourceTrigger=PropertyChanged}"
                               materialDesign:HintAssist.HelperText="Informations complémentaires"
                               AcceptsReturn="True"
                               MinLines="3"
                               MaxLines="5"/>

                        <!-- Statut Actif -->
                        <CheckBox Style="{StaticResource FormCheckBoxStyle}"
                                Content="Client actif"
                                IsChecked="{Binding Client.IsActive}"
                                ToolTip="Décocher pour désactiver temporairement le client"/>

                        <!-- Date de création (lecture seule en modification) -->
                        <TextBox Style="{StaticResource FormTextBoxStyle}"
                               materialDesign:HintAssist.Hint="Date de création"
                               Text="{Binding Client.CreatedDate, StringFormat='dd/MM/yyyy HH:mm'}"
                               IsReadOnly="True"
                               Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </ScrollViewer>

        <!-- FOOTER BUTTONS -->
        <materialDesign:Card Grid.Row="2" Margin="16,8,16,16">
            <Grid Margin="24,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Messages de validation -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="* Champs obligatoires" 
                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    
                    <!-- Message d'erreur -->
                    <TextBlock Text="{Binding ErrorMessage}"
                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                             Foreground="Red"
                             Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Bouton Annuler -->
                <Button Grid.Column="1"
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      Content="Annuler"
                      Command="{Binding CancelCommand}"
                      Margin="0,0,8,0"
                      Width="120"/>

                <!-- Bouton Sauvegarder -->
                <Button Grid.Column="2"
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      Command="{Binding SaveCommand}"
                      IsEnabled="{Binding CanSave}"
                      Width="120">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" 
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding IsSaving, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                       Width="16" Height="16"
                                       IsIndeterminate="True"
                                       Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="{Binding SaveButtonText}" 
                                     Margin="8,0,0,0" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
